<div class="{{getItemTemplateData(...).addClasses}}{{drawHiddenGroup ? ' ws-hidden' : ''}} {{_options.itemsHover ? ' controls-ListView__item__withHover' : ' controls-ListView__item__withoutHover'}}{{(selectedKey == item.getId()) ? ((showSelectedMarker ? ' controls-ListView__item__selected__withMarker' : '') + ' controls-ListView__item__selected') : ''}}"
     data-parent-hash="{{projItem.getParent().getHash()}}" data-hash="{{projItem.getHash()}}"
     data-id="{{item.getId() + ''}}">
      <ws:if data="{{ !isSearch }}">
         <ws:for data="i in getItemTemplateData(...).itemLevel">
            <div class="controls-TreeView__levelPadding">&nbsp;</div>
         </ws:for>
         <div class="controls-TreeView__expand js-controls-TreeView__expand {{projItem.isExpanded() ? 'controls-TreeView__expand__open' : ''}}"></div>
      </ws:if>
      <ws:else data="{{ !projItem.isNode() && projItem.getLevel() > 1 }}">
         <div class="controls-TreeView__levelPadding">&nbsp;</div>
      </ws:else>
   <ws:partial template="{{itemContent}}" scope="{{...}}" />
</div>