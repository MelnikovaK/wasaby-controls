<div class="controls-ExportCustomizer-ColumnBinder-View">
   <div class="controls-ExportCustomizer-ColumnBinder-View__head">
      <div class="controls-ExportCustomizer-ColumnBinder-View__title">
         <ws:if data="{{title}}">{{title}}</ws:if><ws:else>{[НастройщикЭкспорта@@Настройка колонок]}</ws:else>
      </div>
      <SBIS3.CONTROLS:Button
         className="controls-ExportCustomizer-ColumnBinder-View__addRows"
         command="addRows"
         caption="+"
         tooltip="{[НастройщикЭкспорта@@Добавить колонки]}"
      />
   </div>
   <SBIS3.CONTROLS:DataGridView
      className="controls-DataGridView__hasSeparator controls-ExportCustomizer-ColumnBinder-View__grid"
      name="controls-ExportCustomizer-ColumnBinder-View__grid"
      items="{{_rows}}"
      idProperty="id"
      columns="{{_columns}}"
      itemsActions="{{_rowActions}}"
      startScrollColumn="{{1}}"
   />
</div>