<div class="controls-ScrollContainer ws-scrolling-content {{ stickyContainer?' ws-sticky-header__wrapper' }}">
   <div class="controls-ScrollContainer__content ws-scrolling-content {{_isMobileIOS ? '' : ' controls-ScrollContainer__content-overflowHidden'}}{{stickyContainer?' ws-sticky-header__scrollable-container'}}">
      <ws:partial template="{{content}}"/>
   </div>
   <div class="controls-ScrollContainer__scrollbar"></div>
   <ws:if data="{{stickyContainer}}">
      <div class="ws-sticky-header__header-container"></div>
   </ws:if>
   <div class="js-controls-ScrollContainer__paging"></div>
</div>