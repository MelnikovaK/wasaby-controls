<div class="controls-TextBox" title="{{_options.tooltip}}">
   <ws:if data="{{_options.beforeFieldWrapper}}">
      <div class="controls-TextBox__beforeFieldWrapper">
         <ws:partial template="{{_options.beforeFieldWrapper}}" scope="{{...}}"/>
      </div>
   </ws:if>
   <ws:if data="{{_options.afterFieldWrapper && _options.enableArrows !== false}}">
      <div class="controls-TextBox__afterFieldWrapper">
         <ws:partial template="{{_options.afterFieldWrapper}}" scope="{{...}}"/>
      </div>
   </ws:if>
   <div class="controls-TextBox__fieldWrapper {{_options.enableArrows !== false ? 'controls-NumberTextBox__enable-arrow'}}">
      <input
         class="controls-TextBox__field js-controls-TextBox__field {{_options.textTransform === 'uppercase' ? 'controls-TextBox__field-uppercase'}} {{_options.textTransform === 'lowercase' ? 'controls-TextBox__field-lowercase'}}"
         type="text"
         autocomplete="off"
         value="{{_options.tooltip}}"
         placeholder="{{_options.enabled ? _options.placeholder}}"
         maxlength="{{_options.maxLength ? _options.maxLength}}"
      />
   </div>
</div>