<ws:for data="index,item in records">
    <ws:if data="{{ item.getContents }}">
        <ws:partial
                template="{{_getItemTpl()}}"
                contentTemplate="{{_getItemContentTpl()}}"
                defaultItemTpl="{{_defaultItemTemplate}}"
                scope="{{_getItemData()}}"
                item="{{item.getContents()}}"
                projItem="{{item}}"
                selected="{{_getItemData().selectedKey == _getItemData().getPropertyValue(item.getContents(), _getItemData().idProperty)}}"
                multiSelected="{{ item.isSelected() }}"
                hovered="{{index === hoveredIndex}}"/>
    </ws:if>
    <ws:else>
        <ws:partial template="{{ item.tpl }}" scope="{{ item.data }}" />
    </ws:else>
</ws:for>
