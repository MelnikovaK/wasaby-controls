<div class="controls-ListView {{multiselect !== false ? 'controls-ListView__multiselect' : 'controls-ListView__multiselect__off'}}{{ _serverRender ? ' controls-ListView__dataLoaded'}}"
      event:onclick="onClick()"
     event:onmouseenter="mouseEnter()"
     event:onmouseleave="mouseLeave()"
     event:onmousemove="mouseMove()">
   <div class="controls-ListView__itemsContainer">
      <ws:partial template="{{_itemsTemplate}}" hoveredItem="{{_hoveredItem}}" records="{{_records}}"
                  tplData="{{tplData}}" scope="{{...}}"/>
   </div>

   <ws:if data="{{loading}}">
      <div class="controls-AjaxLoader">
         <div class="controls-AjaxLoader__outer">
            <div class="controls-AjaxLoader__block">
               <div class="controls-AjaxLoader__LoadingIndicator"></div>
            </div>
         </div>
      </div>
   </ws:if>

   <div
      event:onmouseenter="mouseEnter()"
      event:onmouseleave="mouseLeave()"
      class="{{!showToolbar ? 'ws-hidden'}}"
      style="position: absolute; width: 100px;
                  background: red; top: {{toolbarTop}}px; left: {{toolbarLeft}}px;">
      <ws:SBIS3.CONTROLS.Button event:onActivated="itemActionActivated(1)" caption="click me"/>
      <ws:SBIS3.CONTROLS.Button event:onActivated="itemActionActivated(2)" caption="don't click me"/>
   </div>

</div>

