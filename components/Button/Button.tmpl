<span name="{{_options.name}}" sbisname="{{_options.sbisname||_options.name}}" newconfig="{{_options.config}}"
      on:click="_onMouseClick()"
      on:mousedown="_onMouseDown()"
      on:mouseup="_onMouseUp()"
      on:keydown="_onKeyDown()"
      on:mouseenter="_onMouseEnter()"
      on:mouseleave="_onMouseLeave()"
      on:touchstart="_onTouchStart()"
      on:touchend="_onTouchEnd()"
      on:touchmove="_onTouchMove()"
      tabindex="{{_options.tabindex}}"
      class="controls-Button controls-ButtonBase
 controls-Button-size__{{!!_options.size ? _options.size : 'default'}}
 controls-Button-color__{{_options.primary ? 'primary':'default'}}
{{_options.primary ? ' controls-Button__primary'}}
{{_isActiveByClick?' controls-Click__active'}}
{{!isVisible() ? ' ws-hidden'}}
{{!isEnabled() ? ' ws-disabled':' ws-enabled'}}"
      title="{{_options.tooltip}}"
      href="{{_options.href}}"
      disabled="{{!isEnabled() ? 'disabled'}}">
    <span class="controls-Button__wrapper">
        <ws:if data="{{!!_options.icon||!!_options._iconClass}}">
           <i class="controls-Button__icon js-controls-Button__icon {{_options._iconClass?_options._iconClass:_options.icon}}"></i>
        </ws:if>
        <ws:if data="{{!!_options.caption}}">
            <span class="controls-Button__text js-controls-Button__text {{_options._textClass}}"><ws:partial template="{{_options.caption}}" /></span>
        </ws:if>
    </span>
</span>
