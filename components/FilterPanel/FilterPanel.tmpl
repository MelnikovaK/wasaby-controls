<div class="controls-FilterPanel controls-FilterPanel_align-{{filterAlign}}{{ expanded ? ' ' + expandedClassName : '' }}">
   <div class="controls-FilterPanel__headContainer">
      <component data-component="SBIS3.CONTROLS.Link" class="controls-FilterPanel__resetFilter" name="ResetFilterButton">
         <opt name="caption" value="Сбросить фильтр"/>
         <opt name="command" value="resetFilter"/>
      </component>
      <ws:SBIS3.CONTROLS.IconButton className="controls-FilterPanel__hideFilterButton controls-IconButton_filter-{{filterAlign}}-close" command="toggleFilter"/>
   </div>
   <div class="controls-FilterPanel__contentContainer">
      <ws:if data="{{ expanded }}">
         <ws:partial template="{{_contentTpl}}" scope="{{...}}" />
      </ws:if>
   </div>
</div>