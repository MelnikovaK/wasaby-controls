<div class="controls-RichEditor">
   <div class="controls-RichEditor__placeholder" >{{ placeholder }}</div>

   <ws:if data="{{autoHeight && maximalHeight && maximalHeight != 0}}">
      <SBIS3.CONTROLS:ScrollContainer
         class="controls-ScrollContainer__flex controls-RichEditor__scrollContainer"
         attributes="{{ {'style':'max-height:' + maximalHeight + 'px;'} }}"
         >
         <div
            class="controls-RichEditor__dataReview ws-basic-style {{editorConfig.className}}{{enabled ? ' ws-hidden'}}"
            tabindex="1"
            style="height:100%;{{autoHeight && minimalHeight && minimalHeight != 0 ? 'min-height:' + minimalHeight + 'px;'}}"
            >{{!enabled && text ? (_prepareReviewContent(text)|sanitize)}}</div>
         <div
            class="controls-RichEditor__editorFrame ws-basic-style {{editorConfig.className}}{{!enabled ? ' ws-hidden'}}"
            style="height:100%;{{autoHeight && minimalHeight && minimalHeight != 0 ? 'min-height:' + minimalHeight + 'px;'}}"
            >{{enabled && text ? (_prepareContent(_prepareReviewContent(text))|sanitize)}}</div>
      </SBIS3.CONTROLS:ScrollContainer>
   </ws:if>
   <ws:else>
      <div
         class="controls-RichEditor__dataReview ws-basic-style {{editorConfig.className}}{{enabled ? ' ws-hidden'}}"
         tabindex="1"
         style="{{autoHeight && minimalHeight && minimalHeight != 0 ? 'min-height:' + minimalHeight + 'px;'}}{{autoHeight && maximalHeight && maximalHeight != 0 ? 'max-height:' + maximalHeight + 'px;'}}"
         >{{!enabled && text ? (_prepareReviewContent(text)|sanitize)}}</div>
      <div
         class="controls-RichEditor__editorFrame ws-basic-style {{editorConfig.className}}{{!enabled ? ' ws-hidden'}}"
         style="{{autoHeight && minimalHeight && minimalHeight != 0 ? 'min-height:' + minimalHeight + 'px;'}}{{autoHeight && maximalHeight && maximalHeight != 0 ? 'max-height:' + maximalHeight + 'px;'}}"
         >{{enabled && text ? (_prepareContent(_prepareReviewContent(text))|sanitize)}}</div>
   </ws:else>

   <textarea class="controls-RichEditor__fakeArea" tabindex="0"></textarea>
   <div class="controls-RichEditor__sourceContainer ws-hidden"><textarea class="controls-RichEditor__sourceArea"></textarea></div>
</div>