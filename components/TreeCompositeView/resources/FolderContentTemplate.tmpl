<div class="controls-ListView__itemCheckBox js-controls-ListView__itemCheckBox {{_options.showCheckboxes ? ' controls-ListView__itemCheckBox__showAlways'}} {{(!_options.showCheckboxes && !_options.hideCheckboxes) ? ' controls-ListView__itemCheckBox__showByHover'}}"></div>
