<div class="controls-ListView {{multiselect !== false ? 'controls-ListView__multiselect' : 'controls-ListView__multiselect__off'}}{{ _serverRender ? ' controls-ListView__dataLoaded' : ' controls-ListView__dataNotLoaded'}}">
    <ws:SBIS3.CONTROLS.Panel tabindex="{{1}}" class="controls-ListView__fakeFocusElement" allowChangeEnable="{{false}}"/>
    <div class="controls-AjaxLoader ws-hidden">
        <div class="controls-AjaxLoader__outer">
            <div class="controls-AjaxLoader__block">
                <div class="controls-AjaxLoader__LoadingIndicator"></div>
            </div>
        </div>
    </div>
    <ws:if data="{{ virtualScrolling }}">
      <div class="controls-ListView__virtualScrollTop"></div>
    </ws:if>
    <ws:if data="{{ _serverRender && _resultsRecord && resultsPosition == 'top' && resultsTpl}}">
       <ws:partial template="{{resultsTpl}}" item="{{_resultsRecord}}" multiselect="{{multiselect}}" />
    </ws:if>
    <div class="controls-ListView__itemsContainer">
        <ws:if data="{{ _serverRender }}">
            <ws:partial template="{{_itemsTemplate}}" records="{{_records}}" tplData="{{_itemData}}" />
        </ws:if>
    </div>
    <ws:if data="{{ _serverRender && _resultsRecord && resultsPosition == 'bottom' && resultsTpl}}">
       <ws:partial template="{{resultsTpl}}" item="{{_resultsRecord}}" multiselect="{{multiselect}}" />
    </ws:if>
    <div class="{{isSmall ? 'controls-ListView__small__EmptyData' : 'controls-ListView__normal__EmptyData'}}
        {{(!_serverRender || _records.length || !emptyHTML) ? ' ws-hidden'}}">
        <ws:partial template="{{ _sanitize(emptyHTML) }}"/>
    </div>
    <ws:if data="{{ footerTpl }}">
        <div class="controls-ListView__footer">
            <ws:partial template="{{footerTpl}}" scope="{{...}}" />
        </div>
    </ws:if>
    <ws:if data="{{ showPaging }}">
        <div class="controls-Pager-container"></div>
    </ws:if>
    <ws:if data="{{ infiniteScroll == 'demand'}}">
       <div class="controls-ListView__serviceFooter">
         <ws:SBIS3.CONTROLS.Link name="loadMoreButton" class="controls-ListView__loadMoreButton" caption="Еще..." visible="false" />
       </div>
    </ws:if>
    <div class="controls-ListView-scrollIndicator {{infiniteScroll === 'up' ? 'controls-ListView-scrollIndicator__up' : ''}}"></div>
    <div class="controls-ListView__ItemsToolbar-container ws-hidden"></div>
    <ws:if data="{{ virtualScrolling }}">
         <div class="controls-ListView__virtualScrollBottom"></div>
    </ws:if>
    <div class="controls-ListView__scrollPager {{!infiniteScroll ? ' ws-hidden' : ''}}"></div>
</div>
