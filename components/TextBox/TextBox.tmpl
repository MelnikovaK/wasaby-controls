<div class="controls-TextBox {{ _prepareClassesByConfig(...).container }}" title="{{tooltip}}">
   <div class="controls-TextBox__wrapper {{ _prepareClassesByConfig(...).wrapper }}"
        title="{{tooltip}}">
      <ws:if data="{{beforeFieldWrapper}}">
         <ws:partial template="{{beforeFieldWrapper}}" scope="{{...}}"/>
      </ws:if>
      <div class="controls-TextBox__fieldWrapper">
         <ws:partial class="{{ _prepareClassesByConfig(...).field }}" template="{{textFieldWrapper}}" scope="{{...}}"/>
      </div>
      <ws:if data="{{afterFieldWrapper}}">
         <ws:partial template="{{afterFieldWrapper}}" scope="{{...}}"/>
      </ws:if>
   </div>
   <ws:if data="{{informationIconColor}}">
      <div class="controls-TextBox__informationIcon {{' controls-TextBox__informationIcon-' + informationIconColor}}"></div>
   </ws:if>
</div>