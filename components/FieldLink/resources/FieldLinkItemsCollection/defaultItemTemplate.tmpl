<div class="controls-FieldLink__item js-controls-ListView__item controls-ListView__item {{className|orEmpty}}"
     data-hash="{{ projItem.getHash() }}"
     data-id="{{ item.getId() + '' }}"
     style="order: {{ needSort ? ((itemsCount || 0) - projItem.getOwner().getIndexByInstanceId(projItem.getInstanceId())) : 0 }}">
    <span class="controls-FieldLink__item-caption{{getItemTemplateData(...).additionalItemClasses}}" title="{{ needTitle ? item[displayProperty] }}">
        <ws:partial template="{{itemContent}}" scope="{{...}}"></ws:partial>
    </span>
    <ws:if data="{{getItemTemplateData(...).drawCross}}">
        <span class="controls-FieldLink__item-cross controls-FieldLink__button js-controls__item-cross icon-size icon-Close icon-disabled"></span>
    </ws:if>
    <ws:if data="{{getItemTemplateData(...).drawComma}}">,</ws:if>
</div>

