<div class="controls-FieldLink__afterFieldWrapper{{ !enabled ? ' controls-FieldLink__afterFieldWrapper-disabled' }}">
   <ws:if data="{{_selectedMultipleItems}}">
      <div class="controls-FieldLink__dropAllLinks controls-FieldLink__button icon-size icon-Close" title="Очистить все"></div>
   </ws:if>
   <ws:if data="{{ showSelector }}">
      <ws:if data="{{ menuSelector }}">
         <SBIS3.CONTROLS:Menu:MenuIcon
               name="fieldLinkMenu"
               cssClassName="controls-FieldLink__showSelector controls-FieldLink__button"
               pickerClassName="controls-FieldLink__showSelector__picker"
               icon="controls-FieldLink__icon icon-size icon-ListView icon-primary action-hover"
               tabindex="0"
               displayProperty="caption"
               idProperty="caption"
               />
      </ws:if>
      <ws:else>
         <div class="controls-FieldLink__showSelector controls-FieldLink__showSelector-button controls-FieldLink__button icon-size icon-ListView"></div>
      </ws:else>
   </ws:if>
    <SBIS3.CONTROLS:Action:SelectorAction
       if="{{ useSelectorAction }}"
       name="FieldLinkSelectorAction"
       mode="{{ selectMode }}"
       visible="{{ false }}"
    />
</div>
