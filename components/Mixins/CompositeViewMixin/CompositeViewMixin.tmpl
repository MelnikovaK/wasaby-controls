<div class="controls-CompositeView controls-DataGridView controls-ListView
            {{ multiselect !== false ? 'controls-ListView__multiselect' : 'controls-ListView__multiselect__off' }}
            {{ startScrollColumn !== undefined ? 'controls-DataGridView__with-partScroll' }}
            {{ 'controls-CompositeView-' + viewMode }}
            {{ viewMode === 'tile' ? ('controls-CompositeView-tile__' + tileMode) }}">
   <div class="controls-ListView__fakeFocusElement" tabindex="-1"></div>
   <div class="controls-AjaxLoader ws-hidden">
      <div class="controls-AjaxLoader__outer">
         <div class="controls-AjaxLoader__block">
            <div class="controls-AjaxLoader__LoadingIndicator"></div>
         </div>
      </div>
   </div>
   <div class="controls-CompositeView__itemsContainer {{ viewMode == 'table' ? 'ws-hidden' }}">
      <ws:if data="{{ _serverRender }}">
         <ws:partial template="{{_compositeItemsTemplate}}" records="{{ _records }}" tplData="{{ _itemData }}"/>
      </ws:if>
      <ws:else>
         <div class="controls-CompositeView__foldersContainer"></div>
      </ws:else>
   </div>
   <table class="controls-DataGridView__table {{ viewMode !== 'table' ? 'ws-hidden' }} {{ stickyHeader ? 'ws-sticky-header__table' }}">
      <ws:partial template="{{_colGroupTpl}}" scope="{{_colgroupData}}" />
      <ws:partial template="{{headTpl}}" scope="{{_headData}}" />
      <tbody class="controls-DataGridView__tbody">
      <ws:if data="{{ _serverRender && viewMode === 'table' }}">
         <ws:partial template="{{_itemsTemplate}}" records="{{_records}}" tplData="{{_itemData}}" />
      </ws:if>
      </tbody>
      <ws:partial template="{{_footTpl}}" scope="{{...}}" />
   </table>
   <div class="controls-ListView__EmptyData {{(!_serverRender || _records.length || !emptyHTML) ? 'ws-hidden' : ''}}">
      <ws:partial template="{{ emptyHTML }}"/>
   </div>
   <ws:if data="{{ footerTpl }}">
      <div class="controls-ListView__footer">
         <ws:partial template="{{footerTpl}}" scope="{{...}}" />
      </div>
   </ws:if>
   <ws:if data="{{ showPaging }}">
      <div class="controls-Pager-container"></div>
      <div class="controls-TreePager-container"></div>
   </ws:if>
   <ws:if data="{{ editArrow || arrowActivatedHandler }}">
      <div class="controls-TreeView__editArrow-container ws-hidden"></div>
   </ws:if>
   <ws:if data="{{ infiniteScroll === 'demand'}}">
      <div class="controls-ListView__serviceFooter">
         <ws:SBIS3.CONTROLS.Link
                 name="loadMoreButton"
                 cssClassName="controls-ListView__loadMoreButton"
                 caption="Ещё..."
                 visible="{{ false }}"
         />
         <span class="controls-ListView__counter ws-hidden">
            Всего:
            <span class="controls-ListView__counterValue"></span>
         </span>
      </div>
   </ws:if>
   <div class="controls-ListView-scrollIndicator {{infiniteScroll === 'up' ? 'controls-ListView-scrollIndicator__up' : ''}}"></div>
   <div class="controls-ListView__ItemsToolbar-container ws-hidden"></div>
   <div class="controls-ListView__scrollPager {{!infiniteScroll ? 'ws-hidden' : ''}}"></div>
</div>