<div class="controls-FormattedTextBox
    controls-TextBox
    controls-TextBox_size_{{!! size ? size : 'm'}}
    controls-TextBox_state_{{ enabled ? 'default': 'disabled'}}
    {{ !enabled ? 'controls-TextBox_state_disabled_singleLine' }}
    controls-TextBox_text-align-{{ textAlign }}
    {{ _paddingClass}}">
    <div class="controls-TextBox__wrapper controls-TextBox__wrapper_singleLine">
        <div autocorrect="off" contenteditable="{{enabled}}" class="js-controls-FormattedTextBox__field controls-TextBox__field controls-FormattedTextBox__field">{{_maskTemplateFn(_modelForMaskTpl)|sanitize}}</div>
    </div>
</div>