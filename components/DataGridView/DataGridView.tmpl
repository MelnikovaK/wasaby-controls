<div class="controls-DataGridView controls-ListView {{multiselect !== false ? 'controls-ListView__multiselect' : 'controls-ListView__multiselect__off' }}
            {{ startScrollColumn !== undefined ? ' controls-DataGridView__with-partScroll' : ''}}{{ _serverRender ? ' controls-ListView__dataLoaded'}}">
    <div class="controls-ListView__fakeFocusElement" tabindex="-1"></div>
    <div class="controls-AjaxLoader ws-hidden">
        <div class="controls-AjaxLoader__outer">
            <div class="controls-AjaxLoader__block">
                <div class="controls-AjaxLoader__LoadingIndicator"></div>
            </div>
        </div>
    </div>
    <table class="controls-DataGridView__table {{(stickyHeader && showHead) ? 'ws-sticky-header__table' : ''}}">
        <ws:partial template="{{_colGroupTpl}}" scope="{{_colgroupData}}" />
        <ws:partial template="{{headTpl}}" scope="{{_headData}}" />
        <tbody class="controls-DataGridView__tbody">
        <ws:if data="{{ _serverRender }}">
            <ws:partial template="{{_itemsTemplate}}" records="{{_records}}" tplData="{{_itemData}}" />
        </ws:if>
        </tbody>
        <ws:partial template="{{_footTpl}}" scope="{{...}}" />
    </table>
    <div class="controls-ListView__EmptyData {{(!_serverRender || _records.length) ? 'ws-hidden' :''}}">{{emptyHTML}}</div>
    <ws:if data="{{ footerTpl }}">
        <div class="controls-ListView__footer">
            <ws:partial template="{{footerTpl}}" scope="{{...}}" />
        </div>
    </ws:if>
    <ws:if data="{{ showPaging }}">
        <div class="controls-Pager-container"></div>
    </ws:if>
    <ws:if data="{{ infiniteScroll == 'demand'}}">
        <div class="controls-ListView__serviceFooter">
            <ws:SBIS3.CONTROLS.Link name="loadMoreButton" class="controls-ListView__loadMoreButton" caption="Еще..." visible="false" />
        </div>
    </ws:if>
    <div class="controls-ListView-scrollIndicator ws-hidden {{infiniteScroll === 'up' ? 'controls-ListView-scrollIndicator__up' : ''}}"></div>
    <div class="controls-ListView__ItemsToolbar-container ws-hidden"></div>
    <div class="controls-ListView__scrollPager {{!infiniteScroll ? 'ws-hidden' : ''}}"></div>
</div>
