<div class="controls-ClockPicker controls-ClockPicker_{{mode}}">
   <ws:partial
      template="tmpl!SBIS3.CONTROLS/Date/TimePicker/ClockPicker/resources/Circle"
      mode="{{mode}}"
      circleName="outer"
      ticks="{{_ticks[mode].outer}}"
      animationTime="{{_animationTime}}"
   />
   <div class="controls-ClockPicker__unitTime js-controls-ClockPicker__unitTime" data-bind="html: unitTime"></div>
   <div
      class="controls-ClockPicker__arrow js-controls-ClockPicker__arrow"
      style="transition: opacity {{_animationTime}}ms;"
      data-bind="{
         css: {
            'controls-ClockPicker__arrow_inner': arrow/isInner,
            'controls-ClockPicker__arrow_outer': arrow/isOuter,
            'controls-ClockPicker__arrow_visible': arrow/visible,
            'controls-ClockPicker__arrow_hidden': arrow/hidden
         },
         style: {
            transform: arrow/transform,
            opacity: arrow/opacity
         }
      }"
   >
      <div
         class="controls-ClockPicker__arrowTip js-controls-ClockPicker__arrowTip"
         data-bind="{
            html: arrowTip/tick,
            css: {
               'controls-ClockPicker__tick_inner': arrow/isInner,
               'controls-ClockPicker__tick_outer': arrow/isOuter
            },
            style: {
               transform: arrowTip/transform
            }
         }"
      ></div>
   </div>
   <ws:if data="{{_ticks[mode].inner}}">
      <ws:partial
         template="tmpl!SBIS3.CONTROLS/Date/TimePicker/ClockPicker/resources/Circle"
         mode="{{mode}}"
         circleName="inner"
         ticks="{{_ticks[mode].inner}}"
         animationTime="{{_animationTime}}"
      />
   </ws:if>
</div>