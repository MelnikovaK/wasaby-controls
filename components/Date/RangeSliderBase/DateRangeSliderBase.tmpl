<div class="controls-DateRangeSlider{{ type === 'normal' ? ' controls-DateRangeSlider__normal' : ' controls-DateRangeSlider__link' }}">
   <ws:if data="{{ showPrevArrow }}">
      <span class="controls-DateRangeSlider__prev{{ type === 'link' ? ' icon-16 icon-ViewBack icon-primary action-hover' : ''}}{{ _prevNextButtonsEnabledClass }}"></span>
   </ws:if>
   <span class="controls-DateRangeSlider__value-wrapper {{_isMinWidth ? 'controls-DateRangeSlider__value-wrapper-minWidth'}}">
      <ws:partial template="{{lockIconTemplate}}" scope="{{...}}"></ws:partial>
      <ws:if data="{{ type == 'normal' }}">
         <span class="controls-DateRangeSlider__value{{ _valueEnabledClass }}">{{ _caption }}</span>
      </ws:if>
      <ws:else>
         <SBIS3.CONTROLS.Link name="Link" caption="{{ _caption }}"/>
      </ws:else>
   </span>
   <ws:if data="{{ showNextArrow }}{{ _prevNextButtonsEnabledClass }}">
      <span class="controls-DateRangeSlider__next{{ type === 'link' ? ' icon-16 icon-View icon-primary action-hover' : ''}}"></span>
   </ws:if>
</div>
