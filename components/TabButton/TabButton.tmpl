<div class="controls-TabButton controls-TabButton__{{align}}-align{{checked ? ' controls-Checked__checked'}}">
   <div class="controls-TabButton__inner">
      <div class="controls-TabButton__wrapper">
         <ws:if data="{{_iconClass}}">
            <span class="controls-TabButton__icon">
               <span class="{{_iconClass}}"></span>
            </span>
         </ws:if>
         <span class="controls-TabButton__caption">
            <ws:partial template="{{sanitize}}" scope="{{ {'caption' : caption} }}" />
         </span>
      </div>
   </div>
   <div class="controls-tabButton__overlay"></div>
   <div class="controls-TabButton__bottomLine"></div>
</div>