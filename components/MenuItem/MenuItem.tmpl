<span class="controls-MenuItem" title="{{tooltip|orEmpty|escapeTagsFromStr:''}}">
    <span class="controls-MenuItem__content">
        <i if="{{ icon }}" class="controls-MenuItem__icon icon-size js-controls-MenuItem__icon {{_iconClass}}" unselectable="on"></i>
        <span if="{{ caption }}" class="controls-MenuItem__text js-controls-MenuItem__text" unselectable="on">{{ rk(caption)|sanitize:_sanitizeOpts }}</span>
    </span>
</span>