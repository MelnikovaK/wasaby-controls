<div class="controls-FormattedTextBox
   controls-TextBox
   controls-PhoneTextBox
   controls-TextBox_size_{{size || 'm'}}
   controls-TextBox_state_{{enabled ? 'default' : 'disabled'}}
   {{ !enabled ? 'controls-TextBox_state_disabled_singleLine' }}
   controls-TextBox_text-align-{{ textAlign }}
   {{ _paddingClass }}">
   <div class="controls-TextBox__wrapper controls-TextBox__wrapper_singleLine">
      <div class="controls-FormattedTextBox__field js-controls-FormattedTextBox__field controls-TextBox__field{{enabled ? '' : ' ws-hidden'}}" contenteditable="{{enabled}}">{{_maskTemplateFn(_modelForMaskTpl)|sanitize}}</div>
      <a href="tel:{{srcText}}" class="controls-PhoneTextBox__link controls-Link ws-hover-target{{enabled ? ' ws-hidden'}}">{{(text || '&nbsp;')|sanitize}}</a>
   </div>
</div>