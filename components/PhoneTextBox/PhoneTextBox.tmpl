<div class="controls-FormattedTextBox
   controls-TextBox
   controls-PhoneTextBox
   controls-TextBox_size_{{size || 'm'}}
   controls-TextBox_state_{{enabled ? 'default' : 'disabled'}}
   {{ !enabled ? 'controls-TextBox_state_disabled_singleLine' }}
   controls-TextBox_text-align-{{ textAlign }}
   {{ _paddingClass }}">
   <div class="controls-TextBox__wrapper">
      <div class="js-controls-FormattedTextBox__field controls-TextBox__field" contenteditable="{{enabled}}">{{_maskTemplateFn(_modelForMaskTpl)|sanitize}}</div>
   </div>
</div>