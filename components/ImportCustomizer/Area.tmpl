<div class="controls-ImportCustomizer-Area">
   <div class="controls-ImportCustomizer-Area__head">
      <div class="controls-ImportCustomizer-Area__head-title">
         <div class="controls-ImportCustomizer-Area__head-title-left">
            <ws:if data="{{title}}">{{title}}</ws:if><ws:else>{[НастройщикИмпорта@@Настройка импорта]}</ws:else>:
            <SBIS3.CONTROLS:Link
               class="controls-ImportCustomizer-Area__head-title-link"
               href="{{file.url}}"
               caption="{{file.name}}"
               inNewTab="{{true}}"
            />
         </div>
         <div class="controls-ImportCustomizer-Area__head-title-right">
            <SBIS3.CONTROLS:Button
               class="controls-ImportCustomizer-Area__applyButton"
               command="complete" primary="true"
               >
               <ws:caption>
                  <ws:if data="{{applyButtonTitle}}">{{applyButtonTitle}}</ws:if>
                  <ws:else>{[НастройщикИмпорта@@Импортировать]}</ws:else>
               </ws:caption>
            </SBIS3.CONTROLS:Button>
         </div>
      </div>
   </div>
   <SBIS3.CONTROLS:ScrollContainer class="controls-ImportCustomizer-Area__body controls-ScrollContainer__flex">
      <ws:content>
         <ws:if data="{{_isNeeds.sheet && sheets && sheets.length}}">
            <SBIS3.CONTROLS:ImportCustomizer:Sheet:View
               class="controls-ImportCustomizer-Area__body__box controls-ImportCustomizer-Area__body__box-sheet"
               name="controls-ImportCustomizer-Area__sheet"
               allSheetsTitle="{{allSheetsTitle}}"
               sheetTitles="{{_sheetsTitles}}"
               sheetIndex="{{sheetIndex}}"
            />
         </ws:if>
         <ws:if data="{{_isNeeds.baseParams}}">
            <ws:partial
               template="{{baseParamsComponent}}"
               scope="{{baseParams}}"
               fields="{{fields}}"
               class="controls-ImportCustomizer-Area__body__box controls-ImportCustomizer-Area__body__box-baseParams"
               name="controls-ImportCustomizer-Area__baseParams"
            />
         </ws:if>
         <ws:if data="{{_isNeeds.provider}}">
            <SBIS3.CONTROLS:ImportCustomizer:Provider:View
               class="controls-ImportCustomizer-Area__body__box controls-ImportCustomizer-Area__body__box-provider"
               name="controls-ImportCustomizer-Area__provider"
               parsers="{{_parserItems}}"
               parser="{{_parserName}}"
               skippedRows="{{_skippedRows}}"
               separator="{{_parserSeparator}}"
            />
         </ws:if>
         <ws:if data="{{_isNeeds.providerArgs}}">
            <Lib:Control:TemplatedArea:TemplatedArea
               template="{{_providerArgsComponent}}"
               class="controls-ImportCustomizer-Area__body__box controls-ImportCustomizer-Area__body__box-not-pad controls-ImportCustomizer-Area__body__box-providerArgs"
               name="controls-ImportCustomizer-Area__providerArgs"
               visible="{{!!_providerArgsComponent}}"
               componentOptions="{{_providerArgsOptions}}"
            />
         </ws:if>
         <ws:if data="{{_isNeeds.columnBinding}}">
            <SBIS3.CONTROLS:ImportCustomizer:ColumnBinding:View
               class="controls-ImportCustomizer-Area__body__box controls-ImportCustomizer-Area__body__box-not-pad controls-ImportCustomizer-Area__body__box-columnBinding"
               name="controls-ImportCustomizer-Area__columnBinding"
               columnCaption="{{bindingColumnCaption}}"
               columnTitle="{{bindingColumnTitle}}"
               rows="{{_columnsBindingRows}}"
               fields="{{fields}}"
               skippedRows="{{_skippedRows}}"
            />
         </ws:if>
      </ws:content>
   </SBIS3.CONTROLS:ScrollContainer>
</div>