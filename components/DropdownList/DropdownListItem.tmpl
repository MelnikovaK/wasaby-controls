<div attr:class="controls-DropdownList__item {{className}}
            {{multiselect ? 'controls-DropdownList__multiselect'}}
            {{(item.get && item.get('isEmptyValue')) ? 'controls-DropdownList__defaultItem'}}
            {{(item.get && item.get(parentProperty)) ? 'controls-DropdownList__child'}}
            {{((item.getId && item.getId()) === defaultId) ? 'controls-ListView__defaultItem'}}"
     attr:data-hash="{{projItem.getHash()}}"
     attr:data-id="{{item.getId ? item.getId()}}">
    <div if="{{multiselect}}" attr:class="controls-DropdownList__itemCheckBox js-controls-DropdownList__itemCheckBox"></div>
    <div attr:class="controls-DropdownList__itemTextWrapper controls-DropdownList__itemTextWrapper-height">
        <div attr:class="controls-DropdownList__item-text" attr:title="{{getPropertyValue(item, displayProperty)}}">
            <ws:partial template="{{itemContent}}" scope="{{...}}" />
        </div>
        <div attr:class="controls-DropdownList__item-text-shadow"></div>
    </div>
</div>