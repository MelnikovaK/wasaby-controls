<div class="controls-Notification controls-Notification__{{_options.style}} controls-Popup__isolatedFocusingContext">
   <div class="controls-Notification__content {{_options.closeButtonVisibility ? 'controls-Notification__content-spacing'}}">
      <ws:if data="{{_options.bodyContentTemplate}}">
         <ws:partial template="{{_options.contentTemplate||_options.bodyContentTemplate}}"></ws:partial>
      </ws:if>
   </div>
   <ws:if data="{{_options.closeButtonVisibility}}">
       <Controls._popupTemplate.CloseButton class="controls-Notification__closeButton" viewMode="link" on:click="_closeClick()"/>
   </ws:if>
</div>
