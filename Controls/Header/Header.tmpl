<span attr:class="controls-Header controls-Header_style-{{_options.style}}">
    <span attr:class="controls-Header__wrapper {{ _options.countClickable ? 'controls-Header_content_hovered'}}">
        <ws:if data="{{_options.iconStyle}}">
            <i attr:class="controls-Separator__icon_style-{{_style}} icon-{{_icon}} icon-{{_size}}"></i>
        </ws:if>
        <ws:if data="{{_options.counterValue}}">
           <Controls:Header:Counter:Counter class="controls-HeaderCount_location-{{_options.counterLocation}}"
                                            on:click="countClickHandler()"
                                            template="tmpl!Controls/Header/Counter/Counter"
                                            value="{{_options.counterValue}}"
                                            size="{{_options.counterSize}}"
                                            style="{{_options.counterStyle}}"
           />
        </ws:if>
        <span attr:class="controls-Header__caption_size-{{_options.size}} controls-Header__caption_style-{{_options.style}}{{_options.clickable ? '_hovered'}}">{{_options.caption}}</span>
    </span>
</span>