<ws:if data="{{_isNewEnvironment}}">
   <ws:partial template="{{ _options.content }}"
               validationErrors="{{isValid()}}"
               style="{{_isValidResult() ? 'invalid': 'info'}}"
               scope="{{_options}}"
               on:valueChanged="_valueChangedHandler()"
               on:inputCompleted="_inputCompletedHandler()"
               on:deactivated="_deactivatedHandler()"
               on:mouseenter="_hoverHandler()"
               on:focusIn="_focusInHandler()"
               on:mouseleave="_mouseLeaveHandler()"
   />
</ws:if>
<ws:else>
   <div>
      <ws:partial template="{{ _options.content }}"
                  style="{{_isValidResult() ? 'invalid': 'info'}}"
                  validationErrors="{{isValid()}}"
                  scope="{{_options}}"
                  on:valueChanged="_valueChangedHandler()"
                  on:inputCompleted="_inputCompletedHandler()"
                  on:deactivated="_deactivatedHandler()"
                  on:mouseenter="_hoverHandler()"
                  on:focusIn="_focusInHandler()"
                  on:mouseleave="_mouseLeaveHandler()"
      />
      <Controls.Popup.Opener.InfoBox name="infoBoxOpener" _vdomOnOldPage="{{true}}" />
   </div>
</ws:else>

