<div name="scrollbar" class="controls-VScrollbar {{_dragging ? 'controls-VScrollbar_dragging'}}" on:wheel="_wheelHandler()"
     on:mousedown="_scrollbarBeginDragHandler()">
   <div name="thumb" class="controls-VScrollbar__thumb controls-VScrollbar__thumb_{{_options.style}}
   {{_dragging ? 'controls-VScrollbar__thumb_dragging controls-VScrollbar__thumb_dragging_' + _options.style}}"
        style="height: {{_thumbHeight}}px; transform: translateY({{_position * _scrollRatio}}px);"
   ></div>
   <Controls.Event.Emitter event="resize" on:resize="_resizeHandler()"/>

   <ws:if data="{{_dragging}}">
      <Controls.Event.Emitter event="mouseup" on:mouseup="_scrollbarEndDragHandler()"/>
      <Controls.Event.Emitter event="mousemove" on:mousemove="_scrollbarOnDragHandler()"/>
   </ws:if>
</div>