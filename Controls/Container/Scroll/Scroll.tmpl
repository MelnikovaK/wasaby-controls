<div class="controls-Scroll ws-flexbox ws-flex-column" on:mouseenter="_mouseenterHandler()"
     on:mouseleave="_mouseleaveHandler()">
   <Controls.Layout.Scroll>
      <div name="content"
           style="{{_overflow === 'scroll' ? _styleHideScrollbar}}"
           class="ws-flex-grow-1 controls-Scroll__content controls-Scroll__content_{{_overflow}}
               {{_useNativeScrollbar ? 'controls-Scroll__content_nativeScrollbar'}}
               {{_hasHover ? 'controls-Scroll__content_possibleScroll'}}"
           on:scroll="_scrollHandler()"
           on:resize="_resizeHandler()"
           on:scrollbarTaken="_scrollbarTakenHandler()" on:scrollbarReleased="_scrollbarReleasedHandler()">
         <ws:partial template="{{_options.content}}"/>
      </div>
   </Controls.Layout.Scroll>

   <Controls.Container.Scroll.Scrollbar
      if="{{!_useNativeScrollbar && _options.scrollbarVisible && (_hasHover || _dragging)}}"
      position="{{_scrollTop}}"
      style="{{_options.style}}"
      contentHeight="{{_getScrollHeight()}}"
      attr:class="controls-Scroll__scrollbar"
      on:scrollbarEndDrag="_scrollbarDragHandler(false)"
      on:scrollbarBeginDrag="_scrollbarDragHandler(true)"
      on:positionChanged="_positionChangedHandler()"/>

   <div if="{{_options.shadowVisible && _hasScroll}}"
        class="controls-Scroll__shadow controls-Scroll__shadow{{_getShadowPosition()}}"></div>

   <Controls.Event.Emitter event="resize" on:resize="_resizeHandler()"/>
</div>