<div class="controls-PageLayout">
    <div attr:class="controls-PageLayout_wrapper">
        <ws:if data="{{_controlPanelTemplate}}">
            <Controls.Container.Async templateName="{{_controlPanelTemplate}}" templateOptions="{{_options}}"/>
        </ws:if>
        <ws:if data="{{_options.tabsSource}}">
            <div attr:class="controls-PageLayout__ButtonTabs_wrapper">
                <Controls.Tabs.Buttons
                        bind:selectedKey="_options.tabsSelectedKey"
                        keyProperty="id"
                        source="{{_options.tabsSource}}"
                />
            </div>
        </ws:if>
    </div>
    <ws:if data="{{_content}}">
        <Controls.Container.Async templateName="{{_content}}" templateOptions="{{_options}}"/>
    </ws:if>
</div>