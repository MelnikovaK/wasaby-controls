<div class="controls-PageLayout">
    <div attr:class="controls-PageLayout__ControlPanel__wrapper">
        <Controls.SwitchableArea itemTemplateProperty="{{_options.itemTemplateProperty || 'itemTemplate'}}" items="{{_items}}" selectedKey="{{_options.tabsSelectedKey}}">
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/SwitchableArea/resource/itemTemplate" type="topArea"/>
            </ws:itemTemplate>
        </Controls.SwitchableArea>
        <ws:if data="{{_items.getCount() > 1}}">
            <Controls.Tabs.Buttons
                    bind:selectedKey="_options.tabsSelectedKey"
                    keyProperty="{{_options.tabsSource.getIdProperty()}}"
                    source="{{_options.tabsSource}}"/>
        </ws:if>
    </div>
    <Controls.SwitchableArea itemTemplateProperty="{{_options.itemTemplateProperty || 'itemTemplate'}}" items="{{_items}}" selectedKey="{{_options.tabsSelectedKey}}">
        <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/SwitchableArea/resource/itemTemplate" type="middleArea"/>
        </ws:itemTemplate>
    </Controls.SwitchableArea>
</div>