<div class="controls-StickyHeader" style="{{_getStyle()}}">
   <Controls.Event.Listener event="updateStickyShadow" on:updateStickyShadow="_updateStickyShadow()"/>
   <div name="observationTargetTop" class="controls-StickyHeader__observationTargetTop"></div>
   <ws:partial template="{{_options.content}}" attr:class="controls-StickyHeader__content"/>
   <div name="observationTargetBottom" class="controls-StickyHeader__observationTargetBottom"></div>
   <!--We use visibility style insted of if statement to prevent jumps when scrolling on iPad-->
   <div class="controls-Scroll__shadow controls-StickyHeader__shadow{{ _isShadowVisible() ? ' controls-StickyHeader__shadowVisible' }}"></div>
</div>
