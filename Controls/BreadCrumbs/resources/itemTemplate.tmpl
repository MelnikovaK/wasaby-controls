<div class="controls-BreadCrumbsV__crumb{{itemData.isBlurred ? ' controls-BreadCrumbsV__crumb_blurred'}}">
    <div class="controls-BreadCrumbsV__titleWrapper{{itemData.isBlurred ? ' controls-BreadCrumbsV__titleWrapper_blurred'}}"
         title="{{itemData.item.title}}">
        <div class="controls-BreadCrumbsV__title">
            {{itemData.item.title}}
        </div>
    </div>
    <ws:if data="{{ itemData.hasArrow }}">
        <span class="controls-BreadCrumbsV__arrow icon-size icon-DayForward icon-primary action-hover"></span>
    </ws:if>
</div>
