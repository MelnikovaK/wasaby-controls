<div attr:class="controls-BreadCrumbsV">
    <ws:if data="{{_options.visibleItems.length > 0}}">
        <div attr:class="controls-BreadCrumbsV__wrapper">
            <div attr:class="controls-BreadCrumbsV__home icon-Home3 icon-primary"
                 on:click="_onHomeClick()"></div>
            <ws:partial template="{{_itemsTemplate}}" items="{{_options.visibleItems}}" itemTemplate="{{_itemTemplate}}" />
        </div>
    </ws:if>

    <Controls.Dropdown.Opener
            name="menuOpener"
            keyProperty="id"
            className="controls-BreadCrumbsController__menu">
        <ws:popupOptions>
            <ws:corner vertical="top"
                       horizontal="right"/>
            <ws:horizontalAlign side="left"/>
            <ws:eventHandlers onResult="{{_onResult}}"/>
        </ws:popupOptions>
    </Controls.Dropdown.Opener>

    <Controls.Event.Emitter event="resize"
                            on:resize="_onResize()"/>
</div>