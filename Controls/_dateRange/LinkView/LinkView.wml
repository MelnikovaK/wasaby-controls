<div class="controls-DateLinkView">
    <div class="controls-DateLinkView-wrapper">
        <ws:if data="{{ (_options.prevArrowVisibility || _options.showPrevArrow) && _viewMode == 'selector' }}">
           <span
              class="controls-DateLinkView__prev {{ _styleClass }}"
              on:click="shiftBack()">
           </span>
        </ws:if>
        <span class="controls-DateLinkView__value-wrapper {{_isMinWidth ? 'controls-DateLinkView__value-wrapper-minWidth'}}">
           <ws:if data="{{ _viewMode == 'selector' }}">
              <span class="controls-DateLinkView__value {{ _styleClass }} {{ _valueEnabledClass }}" on:click="_onClick()">
                 {{ _caption }}
              </span>
           </ws:if>
           <ws:else data="{{ _viewMode == 'link' }}">
              <Controls.buttons:Button name="Link" caption="{{ _caption }}" style="{{_styleMode}}" fontSize="{{_options.fontSize}}" viewMode="link" on:click="_onClick()"/>
           </ws:else>
           <ws:else>
              <Controls.input:Label name="Link" caption="{{ _caption }}" underline="hovered" on:click="_onClick()"/>
           </ws:else>
        </span>
        <ws:if data="{{ _clearButtonVisible }}">
              <span class="controls-DateLinkView__clear" on:click="_clearDate()"></span>
        </ws:if>
        <ws:if data="{{ (_options.nextArrowVisibility || _options.showNextArrow) && _viewMode == 'selector' }}">
           <span
              class="controls-DateLinkView__next {{ _styleClass }}"
              on:click="shiftForward()">
           </span>
        </ws:if>
    </div>
</div>
