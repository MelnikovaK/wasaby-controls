<span attr:class="controls-BaseButton controls-Button__style-{{_style}}
                 controls-Button__type-{{_type}}
                 controls-Button__type-{{_typeWithSize}}"
      attr:title="{{_options.tooltip}}"
      on:click="_clickHandler()">
    <span attr:class="controls-BaseButton__content controls-Button__wrapper-type-{{_typeWithSize}}">
        <ws:if data="{{!!_options.icon}}">
            <i attr:class="controls-Button__icon {{_options.icon}} controls-Button__icon-{{_type}}"></i>
        </ws:if>
        <ws:if data="{{!!_options.caption}}">
           <span attr:class="controls-BaseButton__text controls-Button__text_style-{{_style}} {{_options.icon ? ' controls-Button__text_gap'}}">{{_options.caption}}</span>
        </ws:if>
    </span>
</span>