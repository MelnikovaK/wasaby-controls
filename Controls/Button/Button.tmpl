<span attr:class="controls-BaseButton controls-Button__style-{{_options.style}}{{!isEnabled() ? '-disabled'}}
                 controls-BaseButton controls-Button__type-{{buttonType(_options.style)}}{{!isEnabled() ? '-disabled'}}
                 controls-BaseButton controls-Button__type-{{buttonType(_options.style)}}__size-{{_options.size}}"
      attr:title="{{_options.tooltip}}"
      on:click="_clickHandler()">
    <span attr:class="controls-BaseButton__content controls-Button__wrapper_style-{{_options.style}} controls-Button__wrapper-type-{{buttonType(_options.style)}}__size-{{_options.size}}">
        <ws:if data="{{!!_options.icon}}">
            <i attr:class="controls-Button__icon {{_options.icon}} controls-Button__icon-{{_options.style}}{{!isEnabled() ? '-disabled'}}"></i>
        </ws:if>
        <ws:if data="{{!!_options.caption}}">
           <span attr:class="controls-BaseButton__text controls-Button__text_style-{{_options.style}} {{_options.icon ? ' controls-Button__text_gap'}}">{{_options.caption}}</span>
        </ws:if>
    </span>
</span>