<ws:template name="groupContentTemplate">
   <div class="controls-ListView__groupContent {{ expander === false ? ' controls-ListView__groupContent_cursor-default' : '' }}">
      <ws:if data="{{columnAlignGroup !== undefined || textAlign !== 'left'}}">
         <div class="controls-ListView__groupSeparator-left">&nbsp;</div>
      </ws:if>
      <div class="controls-ListView__groupContent-text {{expander !== false ? 'controls-ListView__groupExpander' + (!itemData.isGroupExpanded ? ' controls-ListView__groupExpander_collapsed': '')}}">
         <ws:if data="{{contentTemplate}}">
            <ws:partial template="{{contentTemplate}}" itemData="{{itemData}}"/>
         </ws:if>
         <ws:else>{{itemData.item}}</ws:else>
      </div>
      <ws:if data="{{columnAlignGroup === undefined}}">
         <ws:if data="{{textAlign !== 'right'}}">
            <div class="controls-ListView__groupSeparator-right">&nbsp;</div>
         </ws:if>
         <ws:if data="{{!!rightTemplate}}">
            <ws:partial template="{{rightTemplate}}" attr:class="controls-ListView__groupContent-rightTemplate" itemData="{{itemData}}"/>
         </ws:if>
      </ws:if>
   </div>
</ws:template>
<ws:template name="groupRightTemplate">
   <div class="controls-ListView__groupContent">
      <div class="controls-ListView__groupSeparator-right">&nbsp;</div>
      <ws:if data="{{!!rightTemplate}}">
         <ws:partial template="{{rightTemplate}}" attr:class="controls-ListView__groupContent-rightTemplate" itemData="{{itemData}}"/>
      </ws:if>
   </div>
</ws:template>
<ws:if data="{{itemData.isNoGridSupport()}}">
   <tr attr:class="controls-ListView__itemV {{itemData.isHiddenGroup ? 'controls-ListView__groupHidden' : 'controls-Grid__row controls-ListView__group'}}" attr:key="group-{{itemData.item}}">
      <td class="controls-ListView__groupCellContent" colspan="{{columnAlignGroup ? columnAlignGroup : itemData.columns.length}}">
         <ws:partial template="groupContentTemplate"/>
      </td>
      <ws:if data="{{columnAlignGroup !== undefined}}">
         <td class="controls-ListView__groupCellContent" colspan="{{itemData.columns.length - columnAlignGroup}}">
            <ws:partial template="groupRightTemplate"/>
         </td>
      </ws:if>
   </tr>
</ws:if>
<ws:else data="{{itemData.isPartialGridSupport()}}">
      <ws:partial template="groupContentTemplate"
                  attr:class="controls-ListView__itemV {{itemData.isHiddenGroup ? 'controls-ListView__groupHidden' : 'controls-Grid__row controls-ListView__group'}}"
                  attr:style="{{itemData.getColumnAlignGroupStyles(columnAlignGroup).left}} {{itemData.gridGroupStyles}}"
                  attr:key="group-{{itemData.item}}"/>
      <ws:if data="{{columnAlignGroup !== undefined && columnAlignGroup !== undefined && columnAlignGroup < itemData.columns.length - (itemData.hasMultiSelect ? 1 : 0)}}">
         <ws:partial template="groupRightTemplate"
                     attr:class="controls-ListView__itemV {{itemData.isHiddenGroup ? 'controls-ListView__groupHidden' : 'controls-Grid__row controls-ListView__group'}}"
                     attr:style="{{itemData.getColumnAlignGroupStyles(columnAlignGroup).right}} {{itemData.gridGroupStyles}}"/>
      </ws:if>
</ws:else>
<ws:else>
   <div attr:class="controls-ListView__itemV {{itemData.isHiddenGroup ? 'controls-ListView__groupHidden' : 'controls-Grid__row controls-ListView__group'}}" attr:key="group-{{itemData.item}}">
      <ws:partial template="groupContentTemplate" attr:style="{{itemData.getColumnAlignGroupStyles(columnAlignGroup).left}}"/>
      <ws:if data="{{columnAlignGroup !== undefined && columnAlignGroup < itemData.columns.length - (itemData.hasMultiSelect ? 1 : 0)}}">
         <ws:partial template="groupRightTemplate"
                     attr:style="{{itemData.getColumnAlignGroupStyles(columnAlignGroup).right}}"/>
      </ws:if>
   </div>
</ws:else>
