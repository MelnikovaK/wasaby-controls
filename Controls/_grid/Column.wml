<ws:template name="defaultCellContent">
    <ws:if data="{{itemData.column.needSearchHighlight}}">
        <Controls.decorator:Highlight highlight="{{itemData.searchValue}}">
            <ws:text>
                <ws:String>{{itemData.item[itemData.column.displayProperty]}}</ws:String>
            </ws:text>
        </Controls.decorator:Highlight>
    </ws:if>
    <ws:else>
        {{itemData.item[itemData.column.displayProperty]}}
    </ws:else>
</ws:template>

<ws:template name="cellContent">
    <ws:if data="{{contentTemplate}}">
        <ws:partial template="{{contentTemplate}}" itemData="{{itemData}}" editArrowTemplate="{{editArrowTemplate}}"/>
    </ws:if>
    <ws:else>
        <ws:if data="{{itemData.column.textOverflow}}">
            <div class="controls-Grid__cell_{{itemData.column.textOverflow}}" title="{{itemData.column.template ? '' : itemData.item[itemData.column.displayProperty] }}">
                <ws:partial template="defaultCellContent"/>
            </div>
        </ws:if>
        <ws:else>
            <ws:partial template="defaultCellContent"></ws:partial>
        </ws:else>
    </ws:else>
</ws:template>

<div class="controls-Grid__row-cell__content controls-Grid__row-cell__content_baseline_L">
    <ws:if data="{{itemData.showEditArrow && itemData.columnIndex === 0}}">
        <ws:partial template="cellContent" attr:class="controls-Grid__editArrow-cellContent controls-Grid__editArrow-overflow-{{itemData.column.textOverflow ? itemData.column.textOverflow}}"/>
        <ws:partial template="{{editArrowTemplate}}" itemData="{{itemData}}"/>
    </ws:if>
    <ws:else>
        <ws:partial template="cellContent" attr:class="controls-Grid__row-cell__content-item"/>
    </ws:else>
</div>
