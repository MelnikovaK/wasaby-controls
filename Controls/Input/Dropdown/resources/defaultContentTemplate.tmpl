<div class="controls-Dropdown__wrapper" name="popupTarget">
   <ws:if data="{{contentTemplate}}">
      <ws:partial template="{{contentTemplate}}" text="{{text}}" icon="{{icon}}" contentTemplate="{{contentTemplate}}"/>
   </ws:if>
   <ws:else>
      <div if="{{icon}}" class="controls-Dropdown__icon"><div class="{{icon}}"></div></div>
      <div if="{{!icon}}" class="controls-Dropdown__text">{{text}}</div>
   </ws:else>
</div>