<Controls.Container.Dropdown
        scope="{{_options}}"
        bind:selectedKeys="_options.selectedKeys"
        showHeader="{{_options.showHeader === true ? true : false}}"
        popupTarget="{{_popupTarget}}"
        typeShadow="default"
        on:selectedItemChanged="_selectedItemChangedHandler()"
        class="controls-Dropdown">
   <ws:partial template="{{_options.contentTemplate || _defaultContentTemplate}}"
               contentTemplate="{{_options.contentTemplate}}"
               icon="{{_icon}}"
               text="{{_text}}"/>
</Controls.Container.Dropdown>