<div class="controls-InputRender controls-InputRender_state_{{ _activeState }} {{ _prepareClassesByConfig(...).container }}" title="{{tooltip}}">
   <div class="controls-InputRender__wrapper">

      <ws:if data="{{_beforeFieldWrapper}}">
         <ws:partial template="{{_beforeFieldWrapper}}"/>
      </ws:if>

      <div on:input="_inputHandler()"
           on:click="_clickHandler()"
           on:select="_selectionHandler()"
           on:keyup="_keyUpHandler()"
           on:change="_notifyHandler('onInputCompleted')"
           class="controls-InputRender__wrapper">
         <ws:partial template="{{_options.content}}"/>
      </div>

      <ws:if data="{{_options.afterFieldWrapper}}">
         <ws:partial template="{{_options.afterFieldWrapper}}"/>
      </ws:if>

   </div>

   <ws:if data="{{_options.tagStyle}}">
      <div on:mouseenter="_notifyHandler('onTagHover')"
           on:click="_notifyHandler('onTagClick')"
           class="controls-InputRender__tagStyle controls-InputRender__tagStyle-{{_options.tagStyle}}">
      </div>
   </ws:if>
</div>

