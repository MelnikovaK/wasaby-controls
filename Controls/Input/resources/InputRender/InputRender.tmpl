<div class="controls-InputRender controls-InputRender_state_{{ _getInputState() }} {{ !isEnabled() ? 'controls-InputRender_state_disabled_' + (_options.multiline ? 'multiLine' : 'singleLine') }} controls-InputRender_size_{{ _options.size ? _options.size : 'default_' + (_options.multiline ? 'multiLine' : 'singleLine') }} controls-InputRender_padding{{ _options.sidePadding ? _options.sidePadding : 'Both' }}"
     title="{{tooltip}}">
   <div class="controls-InputRender__wrapper">
      <div class="controls-InputRender__fieldWrapper">

         <ws:if data="{{_options.beforeFieldWrapper}}">
            <ws:partial template="{{_options.beforeFieldWrapper}}"/>
         </ws:if>

         <ws:partial
               template="{{_options.content}}"
               on:input="_inputHandler()"
               on:click="_clickHandler()"
               on:select="_selectionHandler()"
               on:keyup="_keyUpHandler()"
               on:change="_inputCompletedHandler()"
               on:focus="_focusHandler()"
               value="{{ _options.viewModel.getDisplayValue() }}"
               placeholder="{{ _options.placeholder }}"
         />

         <ws:if data="{{ !_options.viewModel.getDisplayValue() }}">
            <ws:partial
               attr:class="{{ _options.isMultiline ? 'controls-InputArea__placeholder_multiline' }}"
               template="tmpl!Controls/Input/resources/CustomPlaceholder"
               placeholder="{{ _options.placeholder }}"
               attr:tabindex="{{-1}}"
            />
         </ws:if>

         <ws:if data="{{_options.afterFieldWrapper}}">
            <ws:partial template="{{_options.afterFieldWrapper}}"/>
         </ws:if>

      </div>
   </div>

   <ws:if data="{{_options.tagStyle}}">
      <div on:mouseenter="_notifyHandler('onTagHover')"
           on:click="_notifyHandler('onTagClick')"
           class="controls-InputRender__tagStyle controls-InputRender__tagStyle-{{_options.tagStyle}}">
      </div>
   </ws:if>
</div>

