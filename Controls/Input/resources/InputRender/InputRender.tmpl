<div class="controls-InputRender
   controls-{{ _options.inputType }}-InputRender
   controls-{{ _options.inputType }}-InputRender_style_{{ _options.style }}
   controls-{{ _options.inputType }}-InputRender_state_{{ _getInputState() }}
   {{ !isEnabled() ? 'controls-' + _options.inputType + '-InputRender_state_disabled_' + (_options.multiline ? 'multiLine' : 'singleLine') }}
   controls-InputRender_size_{{ (_options.size ? _options.size : 'default') + (_options.multiline ? '_multiLine' : '_singleLine') }}
   controls-{{ _options.inputType }}-InputRender_padding{{ _options.sidePadding ? _options.sidePadding : 'Both' }}
   {{ !isEnabled() && !_options.multiline ? 'controls-InputRender_whiteSpace_nowrap' : 'controls-InputRender_whiteSpace_normal' }}"
     title="{{tooltip}}">
   <div class="controls-InputRender__wrapper controls-InputRender__wrapper_{{ _options.multiline ? 'multiLine' : 'singleLine' }}">
      <div class="controls-InputRender__fieldWrapper controls-InputRender__fieldWrapper{{_options.multiline ? '_multiLine' : '_singleLine'}}">

         <ws:if data="{{_options.beforeFieldWrapper}}">
            <ws:partial template="{{_options.beforeFieldWrapper}}"/>
         </ws:if>

         <ws:partial
               template="{{_options.content}}"
               on:input="_inputHandler()"
               on:click="_clickHandler()"
               on:select="_selectionHandler()"
               on:keyup="_keyUpHandler()"
               on:change="_inputCompletedHandler()"
               on:focusin="_focusinHandler()"
               attr:class="{{ _options.textAlign === 'right' ? 'controls-InputRender__field_textAlign_right' }}"
               value="{{ _options.viewModel.getDisplayValue() }}"
         />

         <ws:if data="{{ !_options.viewModel.getDisplayValue() && isEnabled()}}">
            <ws:partial
               attr:class="{{ _options.multiline ? 'controls-InputArea__placeholder_multiline' }}"
               template="tmpl!Controls/Input/resources/CustomPlaceholder"
               placeholder="{{ _options.placeholder }}"
               attr:tabindex="{{-1}}"
            />
         </ws:if>

         <ws:if data="{{_options.afterFieldWrapper}}">
            <ws:partial template="{{_options.afterFieldWrapper}}"/>
         </ws:if>

      </div>
   </div>

   <ws:if data="{{_options.tagStyle}}">
      <div on:mouseenter="_notifyHandler('onTagHover')"
           on:click="_notifyHandler('onTagClick')"
           class="controls-InputRender__tagStyle controls-InputRender__tagStyle-{{_options.tagStyle}}">
      </div>
   </ws:if>
</div>

