<Controls.Container.Dropdown
        source="{{_options.source}}"
        keyProperty="{{_options.keyProperty}}"
        parentProperty="{{_options.parentProperty}}"
        nodeProperty="{{_options.nodeProperty}}"
        defaultItemTemplate="{{_options.defaultItemTemplate}}"
        itemTemplateProperty="{{_options.itemTemplateProperty}}"
        itemTemplate="{{_options.itemTemplate}}"
        headTemplate="{{_options.headTemplate}}"
        contentTemplate="{{_options.contentTemplate}}"
        footerTemplate="{{_options.footerTemplate}}"
        headConfig="{{_options.headConfig}}"
        showHeader="{{_options.showHeader}}"
        selectedKeys="{{_options.selectedKey}}"
        caption="{{_options.caption}}"
        corner="{{_corner}}"
        width="{{_width}}"
        className="controls-ComboBox-popup"
        typeShadow="suggestionsContainer"
        close="{{_onClose}}"
        on:selectedItemChanged="_selectedItemChangedHandler()"
        on:mousedown="_mouseDownHandler()"
        class="controls-ComboBox">

      <Controls.Input.resources.InputRender.InputRender
              bind:value="_value"
              size="{{_options.size}}"
              tagStyle="{{_options.tagStyle}}"
              viewModel="{{_simpleViewModel}}"
              placeholder="{{_options.placeholder}}"
              validationErrors="{{_options.validationErrors}}"
              class="controls-ComboBox-InputRender">

         <ws:content>
            <ws:partial
                    template="tmpl!Controls/Input/resources/input"
                    readOnly="{{!_options.editable}}"/>
         </ws:content>

         <ws:afterFieldWrapper>
            <Controls.Button.ButtonSeparator bind:value="_isOpen"/>
         </ws:afterFieldWrapper>

      </Controls.Input.resources.InputRender.InputRender>
</Controls.Container.Dropdown>