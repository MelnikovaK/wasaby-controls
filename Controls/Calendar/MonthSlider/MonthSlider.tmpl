<div class="controls-MonthSlider">
   <div attr:class="controls-MonthSlider__header">
      <span attr:class="controls-MonthSlider__header-button controls-MonthSlider__header-home-button icon-size icon-Home3 icon-primary {{ !_isHomeVisible ? 'ws-invisible' }}" on:click="_setCurrentMonth()"></span>
      <span attr:class="controls-MonthSlider__header-button icon-size icon-MarkCLeftLight icon-primary" on:click="_slideMonth(-1)"></span>
      <span attr:class="controls-MonthSlider__header-title">{{ _month.strftime('%B, %Y') }}</span>
      <span attr:class="controls-MonthSlider__header-button icon-size icon-MarkCRightLight icon-primary" on:click="_slideMonth(1)"></span>
   </div>

   <div attr:class="controls-MonthSlider__weekdays-container">
      <div for="day in _days" attr:class="controls-MonthSlider__weekdays-item">
         {{ day.caption }}
      </div>
   </div>

   <Controls.Calendar.MonthSlider.Slider
      data="{{_month}}"
      animation="{{_animation}}"
      attr:class="controls-MonthSlider__slider"
   >
      <Controls.Calendar.Month
         attr:class="controls-MonthSlider__month"
         month="{{content.data}}"
         on:itemClick="_itemClickHandler()"
         startValue="{{_options.startValue}}"
         endValue="{{_options.endValue}}"
         bind:selectionProcessing="selectionProcessing"
         bind:selectionBaseValue="selectionBaseValue"
         bind:selectionHoveredValue="selectionHoveredValue"
         quantum="{{_options.quantum}}"
         selectionType="{{_options.selectionType}}"

         on:startValueChanged="_onStartValueChanged()"
         on:endValueChanged="_onEndValueChanged()"

         showWeekdays="{{false}}"
      />
   </Controls.Calendar.MonthSlider.Slider>
</div>