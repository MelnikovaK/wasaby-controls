<div class="controls-SubmitPopup__footer">
   <div class="controls-SubmitPopup__buttonContainer">
      <ws:if data="{{type === 'ok'}}">
         <ws:partial
                 ws-autofocus="{{true}}"
                 style="primary"
                 caption="{{okCaption}}"
                 template="Controls/Button"
                 attr:class="controls-SubmitPopup__button controls-Button__ellipsis"
                 on:click="_sendResult()"
         />
      </ws:if>
      <ws:else>
         <ws:partial
                 ws-autofocus="{{true}}"
                 style="primary"
                 caption="{{yesCaption}}"
                 template="Controls/Button"
                 attr:class="controls-SubmitPopup__button{{type === 'yesnocancel' ? ' controls-SubmitPopup__button-mini'}} controls-Button__ellipsis"
                 on:click="_sendResult(true)"
         />
         <ws:partial
                 caption="{{noCaption}}"
                 template="Controls/Button"
                 attr:class="controls-SubmitPopup__button{{type === 'yesnocancel' ? ' controls-SubmitPopup__button-mini'}} controls-Button__ellipsis"
                 on:click="_sendResult(false)"
         />
         <ws:if data="{{type === 'yesnocancel'}}">
            <ws:partial
                    caption="{{cancelCaption}}"
                    template="Controls/Button"
                    attr:class="controls-SubmitPopup__button controls-SubmitPopup__button-mini controls-Button__ellipsis"
                    on:click="_sendResult()"
            />
         </ws:if>
      </ws:else>
   </div>
</div>