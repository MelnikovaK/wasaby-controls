<span class="controls-Switch" on:click="_clickHandler()">
   <span class="controls-Switch__wrapper
               {{!_options.readOnly ? 'controls-Switch_enabled'}}
               {{_options.value ? ' controls-Switch_checked'}}"
         title="{{tooltip}}">
      <ws:partial template="tmpl!Controls/Toggle/resources/SwitchCircle/SwitchCircle" readOnly="{{_options.readOnly}}" selected="{{_options.value ? true : false}}"/>
      <span class="controls-Switch__line{{_options.readOnly ? ' controls-Switch__line_disabled' : ' controls-Switch__line_enabled'}}"></span>
   </span>
   <span class="controls-Switch__text controls-Switch__text_{{_options.readOnly ? 'disabled' : 'enabled'}}_{{_options.value ? 'selected' : 'unselected'}}" >{{_options.caption}}</span>
</span>