<div class="controls-Checkbox">
    <div on:click="_clickHandler()" class="controls-Checkbox__wrapper {{isEnabled() ? 'controls-Checkbox__enabled' : 'controls-Checkbox__disabled'}}
                                           {{_options.value ? ' controls-Checked__checked'}}
                                           {{_options.value === null && _options.triState ? ' controls-ToggleButton__null'}}"
         enabled="isEnabled()"
         title="{{_options.tooltip}}">
        <div class="{{_options.value === null && _options.triState ? 'controls-Checkbox__icon-tristate controls-Checkbox__icon-tristate-color__' + (isEnabled() ? 'enabled':'disabled')}}
                    {{_options.value ? 'controls-Checkbox__icon-checked controls-Checkbox__icon-checked-color__'+ (isEnabled() ? 'enabled':'disabled')}}
                     controls-Checkbox__icon-border-color__{{isEnabled() ? 'enabled': 'disabled'}} controls-Checkbox__icon"></div>
        <ws:partial template="tmpl!Controls/Toggle/Checkbox/resources/CheckboxCaption" enabled="{{_options.value !== null && !_options.value ? isEnabled() : true}}" caption="{{_options.caption}}"/>
    </div>
</div>