<span class="controls-DoubleSwitch" title="{{_options.tooltip}}">
   <ws:if data="{{_options.orientation === 'vertical'}}">
      <ws:partial template="{{_toggleTemplate}}" _orientation="{{_options.orientation}}" _enabled="{{isEnabled()}}" _value="{{_options.value}}"/>
      <span class="controls-DoubleSwitch__textBlock">
         <ws:partial template="{{_textTemplate}}" _enabled="{{isEnabled()}}" _orientation="{{_options.orientation}}" _nextValue="{{true}}" _value="{{_options.value}}" _caption="{{_options.captions[0]}}"/>
         <ws:partial template="{{_textTemplate}}" _enabled="{{isEnabled()}}" _orientation="{{_options.orientation}}" _nextValue="{{false}}" _value="{{!_options.value}}" _caption="{{_options.captions[1]}}"/>
      </span>
   </ws:if>
   <ws:else>
      <ws:partial template="{{_textTemplate}}" _enabled="{{isEnabled()}}" _nextValue="{{true}}" _value="{{_options.value}}" _caption="{{_options.captions[0]}}"/>
      <ws:partial template="{{_toggleTemplate}}" _orientation="{{_options.orientation}}" _enabled="{{isEnabled()}}" _value="{{_options.value}}"/>
      <ws:partial template="{{_textTemplate}}" _enabled="{{isEnabled()}}" _nextValue="{{false}}" _value="{{!_options.value}}" _caption="{{_options.captions[1]}}"/>
   </ws:else>
</span>
