<span class="controls-DoubleSwitch__toggle
            {{_enabled ? 'controls-DoubleSwitch_enabled'}}
            {{_orientation === 'vertical' ? 'controls-DoubleSwitch__toggle_vertical'}}
            {{_value ? ' controls-DoubleSwitch__toggle_checked'}}"
      on:click="_clickToggleHandler()">
   <span class="controls-DoubleSwitch__line{{_enabled ? ' controls-DoubleSwitch__line_enabled' : ' controls-DoubleSwitch__line_disabled'}}"/>
   <span class="controls-DoubleSwitch__marker"/>
</span>
