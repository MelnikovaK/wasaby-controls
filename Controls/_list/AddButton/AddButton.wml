<span class="controls-AddButton {{_options.validationStatus ? 'controls-' + _options.validationStatus + '_theme-' + _options.theme}}" on:click="clickHandler()">
   <span attr:class="controls-AddButton_state-{{_options.readOnly ? 'disable': 'enable'}} controls-AddButton-wrapper">
      <span class="controls-AddButton__svgWrapper">
         <div class="controls-AddButton__icon controls-AddButton_icon-{{_options.readOnly ? 'disable': 'enable'}}"></div>
      </span>
      <span attr:class="controls-AddButtonText-{{_options.readOnly ? 'disable': 'enable'}}">{{_options.caption}}</span>
   </span>
</span>
