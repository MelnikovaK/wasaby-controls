<div class="controls-PropertyGrid">
   <ws:for data="index, item in _options.items">
      <div if="{{item.visibility}}" class="controls-PropertyGrid__item">
         <ws:if data="{{item.itemTemplateProperty}}">
            <ws:partial template="{{item.itemTemplateProperty}}" item="{{item}}"
                        on:valueChanged="_valueChangedHandler(index)"
                        on:selectedKeysChanged="_valueChangedHandler(index)"/>
         </ws:if>
         <ws:else>
            <ws:partial template="{{_options.itemTemplate}}" item="{{item}}"
                        on:valueChanged="_valueChangedHandler(index)"
                        on:selectedKeysChanged="_valueChangedHandler(index)"/>
         </ws:else>
      </div>
   </ws:for>
</div>