<div class="controls-Toolbar">
    <div class="controls-Toolbar_content">
        <ws:for data="item in _items">
            <ws:if data="{{item.showType !== showType.MENU && item[_parentProperty] !== 0}}">
                <ws:partial on:click="_onItemClick(item)"
                            itemsSpacing="{{_options.itemsSpacing}}"
                        template="{{item[_options.itemTemplateProperty] || _options.itemTemplate || _defaultItemTemplate}}"
                        item="{{item}}"
                        theme="{{_options.theme}}"
                        size="{{_options.size}}"/>
            </ws:if>
        </ws:for>
        <div if="{{_needShowMenu}}" class="controls-Toolbar__menu controls-Toolbar__menu_theme-{{_options.theme}} controls-Toolbar__item_icon_secondary_theme-{{_options.theme}}"  name="popupTarget" on:click="_showMenu()">
            <i class="icon-medium icon-ExpandDown"/>
        </div>
    </div>
    <Controls.dropdown:Opener name="menuOpener" scope="{{_popupOptions}}" />
</div>
