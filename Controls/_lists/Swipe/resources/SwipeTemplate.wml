<ws:if data="{{itemActionsPosition === 'outside'}}">
    <ws:partial template="{{itemActionsTemplate}}" itemData="{{itemData}}"/>
</ws:if>
<ws:else data="{{swipeConfig}}">
    <div class="controls-itemActionsV_swipe_animationContainer">
        <div class="controls-Swipe
                {{menuIsShown ? 'controls-itemActionsV_invisible'}}
                controls-Swipe_{{animationState}}"
             on:animationend="_onAnimationEnd()">
            <div class="controls-Swipe_{{swipeDirection}}">
                <ws:partial
                   template="wml!Controls/_lists/Swipe/resources/SwipeFor"
                   itemData="{{itemData}}"
                   showedActions="{{itemData.itemActions.showed}}"
                   swipeConfig="{{swipeConfig}}"
                   swipeDirection="{{swipeDirection}}"
                   titlePosition="{{titlePosition}}"
                   needSeparator="{{needSeparator}}"
                   needIcon="{{needIcon}}"
                   needTitle="{{needTitle}}"/>
            </div>
        </div>
    </div>
</ws:else>