<div class="controls-SubmitPopup__footer">
   <div class="controls-SubmitPopup__buttonContainer">
      <ws:if data="{{useConfirmButtons}}">
         <ws:partial
                 ws-autofocus="{{true}}"
                 style="primary"
                 caption="{{buttonConfig.yes.caption}}"
                 template="js!Controls/Button"
                 attr:class="controls-SubmitPopup__button{{hasCancelButton ? ' controls-SubmitPopup__button-mini'}} controls-Button__ellipsis"
                 on:click="_sendResult(true)"
         />
         <ws:partial
                 caption="{{buttonConfig.no.caption}}"
                 template="js!Controls/Button"
                 attr:class="controls-SubmitPopup__button{{hasCancelButton ? ' controls-SubmitPopup__button-mini'}} controls-Button__ellipsis"
                 on:click="_sendResult(false)"
         />
         <ws:if data="{{hasCancelButton}}">
            <ws:partial
                    caption="{{buttonConfig.cancel.caption}}"
                    template="js!Controls/Button"
                    attr:class="controls-SubmitPopup__button controls-SubmitPopup__button-mini controls-Button__ellipsis"
                    on:click="_sendResult()"
            />
         </ws:if>
      </ws:if>
      <ws:else>
         <ws:partial
                 ws-autofocus="{{true}}"
                 style="primary"
                 caption="{{buttonConfig.ok.caption}}"
                 template="js!Controls/Button"
                 attr:class="controls-SubmitPopup__button controls-Button__ellipsis"
                 on:click="_sendResult()"
         />
      </ws:else>
   </div>
</div>