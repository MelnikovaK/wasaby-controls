<div class="controls-ConfirmationTemplate controls-ConfirmationTemplate__status-{{_options._style}}{{_size == 'l' ? ' controls-ConfirmationTemplate__size-l' : ' controls-ConfirmationTemplate__size-m'}} controls-Popup__isolatedFocusingContext"
    ws-tab-cycling="true"
    ws-delegates-tabfocus="true">
    <div class="controls-ConfirmationTemplate__body">
        <!--Если размер текста сообщения и описания превышает заданные рамки, то увеличиваем размер окна-->
        <div class="controls-ConfirmationTemplate__main">
            <ws:partial template="{{_options.contentArea||_options.bodyContentTemplate}}"/>
        </div>
        <div class="controls-ConfirmationTemplate__footer">
            <ws:partial template="{{_options.footerArea||_options.footerContentTemplate}}"/>
        </div>
    </div>
</div>
