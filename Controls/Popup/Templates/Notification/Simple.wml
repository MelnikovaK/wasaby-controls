<ws:partial template="Controls/Popup/Templates/Notification/Base"
            closeButtonVisibility="{{true}}"
            style="{{_options.style}}"
            autoClose="{{_options.autoClose}}">
    <ws:bodyContentTemplate>
        <div class="controls-Notification__simpleTemplate">
            <ws:if data="{{_options.icon}}">
                <div class="controls-Notification__simpleTemplate-icon icon-24 icon-{{_options.style}} icon-{{_options.icon}}"></div>
            </ws:if>
            <div class="controls-Notification__simpleTemplate-message">{{_options.text}}</div>
        </div>
    </ws:bodyContentTemplate>
</ws:partial>
