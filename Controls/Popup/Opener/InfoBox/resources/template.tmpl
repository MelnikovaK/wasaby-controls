<Controls:Container:Scroll attr:class="controls-InfoBox__scrollContainer">
   <ws:content>
      <div class="controls-InfoBox ws-Container__popup-scrolling-content">
         <div
                 class="controls-InfoBox__closeButton icon-24 icon-Close"
                 on:click="_close()">
         </div>
         <ws:if data="{{float}}">
            <div class="controls-InfoBox_floatElement"></div>
         </ws:if>
         <ws:partial
                 template="{{template}}"
                 message="{{message}}"
                 class="{{!float ? 'controls-InfoBox__message_margin'}}">
         </ws:partial>
      </div>
   </ws:content>
</Controls:Container:Scroll>