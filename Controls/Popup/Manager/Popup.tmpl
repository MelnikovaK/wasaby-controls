<div class="ws-Popup">
    <ws:partial
            template="{{_options.template}}"
            scope="{{_options.componentOptions}}"
            on:sendResult="_sendResult()"
            on:close="_close()"
            on:keyup="_keyUp()"
            on:resize="_onResize()"
            on:focusIn="_focusIn()"
            on:focusOut="_focusOut()">
    </ws:partial>
    <Controls:Event:Emitter event="resize" on:resize="_update()"/>
    <Controls:Event:Emitter event="scroll" on:scroll="_update()"/>
</div>