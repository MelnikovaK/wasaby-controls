<div class="ws-Popup" attr:style="{{_resetMargin ? 'margin: 0'}}">
    <ws:partial
            template="{{_options.template}}"
            scope="{{_options.componentOptions}}"
            on:sendResult="_sendResult()"
            on:close="_close()"
            on:keyup="_keyUp()"
            on:resize="_onResize()"
            on:activated="_focusIn()"
            on:deactivated="_focusOut()">
    </ws:partial>
    <Controls:Event:Emitter event="resize" on:resize="_onResize()"/>
    <Controls:Event:Emitter event="scroll" on:scroll="_onScroll()"/>
</div>