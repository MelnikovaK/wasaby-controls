<div class="controls-Popup">
    <ws:partial
            attr:class="controls-Popup__template"
            template="{{_options.template}}"
            scope="{{_options.templateOptions}}"
            on:sendResult="_sendResult()"
            on:close="_close()"
            on:mousedown="_popupClickHandler()"
            on:keyup="_keyUp()"
            on:resize="_update()">
    </ws:partial>
    <Controls.Event.Emitter event="resize" on:resize="_update()"/>
    <Controls.Event.Emitter event="scroll" on:scroll="_update()"/>
    <Controls.Event.Emitter event="mousedown" on:mousedown="_documentClickHandler()"/>
</div>