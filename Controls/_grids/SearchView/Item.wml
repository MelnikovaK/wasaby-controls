<ws:if data="{{itemData.item.getId}}">
   <ws:partial template="wml!Controls/_grids/Item"
               scope="{{_options}}"/>
</ws:if>
<ws:else>
   <ws:partial template="Controls/treeGrids:ItemTemplate"
               scope="{{_options}}"
               colspan="{{true}}"
               on:click="_onSearchItemClick(itemData.dispItem)">
      <ws:colspanTemplate>
         <Controls.breadcrumbs:Path items="{{colspanTemplate.itemData.item}}" on:itemClick="_onSearchPathClick()" keyProperty="{{itemData.keyProperty}}" displayProperty="{{itemData.displayProperty}}">
            <ws:itemTemplate>
               <ws:partial template="Controls/breadcrumbs:ItemTemplate">
                  <ws:contentTemplate>
                     <ws:partial template="wml!Controls/_grids/SearchView/SearchBreadCrumbsContent" searchValue="{{itemData.searchValue}}"/>
                  </ws:contentTemplate>
               </ws:partial>
            </ws:itemTemplate>
         </Controls.breadcrumbs:Path>
      </ws:colspanTemplate>
   </ws:partial>
</ws:else>