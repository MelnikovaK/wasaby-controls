<div attr:class="ws-ListView__item {{marker != false && itemData.isSelected ? 'ws-ListView__item__selected'}} {{!!itemData.isActionHoverItem ? 'ws-ListView__item_actionHover'}}"
     attr:key="{{itemData.dispItem.getHash()}}">

    <ws:partial template="{{multiSelectTpl}}" multiSelectStatus="{{itemData.multiSelectStatus}}" key="{{itemData.key}}"/>

    <ws:if data="{{contentTemplate}}">
        <ws:partial template="{{contentTemplate}}" itemData="{{itemData}}"/>
    </ws:if>
    <ws:else>
        <div>{{itemData.getPropValue(itemData.item, displayProperty || 'title')}}</div>
    </ws:else>
    <ws:if data="{{itemData.itemActions && itemData.itemActions.length}}">
        <ws:partial template="{{itemActionsTemplate}}"  itemData="{{itemData}}"/>
    </ws:if>
</div>