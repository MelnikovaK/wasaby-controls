<Controls.Popup.Templates.Dialog.DialogTemplate caption="{[Выбор раздела]}" attr:class="controls-MoveDialog">
   <ws:contentArea>
      <Controls.Container.Data source="{{_options.source}}"
                               filter="{{_options.filter}}"
                               navigation="{{_options.navigation}}"
                               keyProperty="{{_options.keyProperty}}">
         <Controls.Search.Controller searchParam="{{_options.searchParam}}">
            <div class="controls-MoveDialog__content">
               <Controls.Search.Input.Container attr:class="controls-MoveDialog__search">
                  <Controls.Input.Search/>
               </Controls.Search.Input.Container>
               <ws:if data="{{_options.showRoot}}">
                  <Controls.buttons:Button attr:class="controls-MoveDialog__root"
                                           viewMode="link"
                                           caption="{[В корень]}"
                                           on:click="_onItemActionsClick('move', _options.root)"
                                           icon="icon-small icon-primary icon-Home3"/>
               </ws:if>
               <Controls.Container.Scroll attr:class="controls-MoveDialog__scroll">
                  <Controls.List.Container>
                     <Controls.Explorer
                        name="explorer"
                        itemActions="{{_itemActions}}"
                        itemActionVisibilityCallback="{{_itemActionVisibilityCallback}}"
                        on:itemActionsClick="_onItemActionsClick()"
                        on:itemClick="_onItemClick()"
                        parentProperty="{{_options.parentProperty}}"
                        nodeProperty="{{_options.nodeProperty}}"
                        displayProperty="{{_options.displayProperty}}"
                        hasChildrenProperty="{{_options.hasChildrenProperty}}"
                        root="{{_options.root}}"
                        itemsFilterMethod="{{_itemsFilterMethod}}"
                        expanderDisplayMode="adaptive"
                        columns="{{_options.columns}}"/>
                  </Controls.List.Container>
               </Controls.Container.Scroll>
            </div>
         </Controls.Search.Controller>
      </Controls.Container.Data>
   </ws:contentArea>
</Controls.Popup.Templates.Dialog.DialogTemplate>