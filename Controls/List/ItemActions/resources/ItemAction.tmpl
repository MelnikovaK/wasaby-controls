<div  attr:class="controls-itemActionsV__action
            {{!!action.style ? 'controls-itemActionsV__action_' + action.style}}
            {{!!action.iconDone ? ' controls-itemActionsV__action_done'}}
            {{!!action.iconError ? ' controls-itemActionsV__action_error'}}"
      attr:title="{{!!action.title ? action.title}}"
      on:click="_onActionClick(action, itemData)">
    <ws:if data="{{!!action.icon}}">
        <i attr:class="{{action.icon}}"/>
    </ws:if>
    <ws:if data="{{!action.icon && action.title}}">
        <span attr:class="controls-itemActionsV__action_title">{{action.title}}</span>
    </ws:if>
</div>