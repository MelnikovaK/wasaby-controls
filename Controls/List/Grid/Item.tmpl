<ws:if data="{{!itemData.isGroup}}">
   <div attr:class="controls-Grid__row controls-ListView__itemV" attr:key="{{itemData.item.getId()}}">
      <ws:if data="{{contentTemplate}}">
         <ws:partial template="{{contentTemplate}}" itemData="{{itemData}}" itemActionsTemplate="{{itemActionsTemplate}}" swipeTemplate="{{swipeTemplate}}" multiSelectTpl="{{multiSelectTpl}}"/>
      </ws:if>
      <ws:else>
         <ws:for data="itemData.resetColumnIndex(); itemData.getLastColumnIndex()>=itemData.columnIndex; itemData.goToNextColumn();">
            <div attr:class="{{itemData.getCurrentColumn().cellClasses}}{{!!itemData.isActive ? ' controls-GridView__item_active'}}"
                 attr:style="{{itemData.ladderSupport ? itemData.getCurrentColumn().cellStyleForLadder}}">
               <ws:if data="{{itemData.multiSelectVisibility && itemData.columnIndex === 0}}">
                  <ws:partial template="{{multiSelectTpl}}" multiSelectStatus="{{itemData.multiSelectStatus}}" key="{{itemData.key}}" attr:class="controls-GridView__checkbox"/>
               </ws:if>
               <ws:else>
                  <div class="controls-Grid__row-cell__contentWrapper">
                     <ws:partial template="{{itemData.getCurrentColumn().template}}"
                                 attr:class="{{itemData.getCurrentColumn().withLadder ? 'controls-Grid__row-cell__content_withLadder'}}"
                                 contentData="{{itemData.getCurrentColumn()}}" />
                  </div>
               </ws:else>
               <ws:if data="{{itemData.getLastColumnIndex() === itemData.columnIndex && itemData.itemActions  && itemData.itemActions.all && itemData.itemActions.all.length}}">
                  <ws:if data="{{itemData.isSwiped}}">
                     <ws:partial template="{{swipeTemplate}}"  itemData="{{itemData}}" itemActionsTemplate="{{itemActionsTemplate}}"/>
                  </ws:if>
                  <ws:else >
                     <ws:partial template="{{itemActionsTemplate}}"  itemData="{{itemData}}"/>
                  </ws:else>
               </ws:if>
            </div>
         </ws:for>
      </ws:else>
   </div>
   <ws:if data="{{itemData.ladder}}">
      <div attr:class="controls-Grid__row-ladder-cell {{itemData.ladder.currentColumn.cellClasses}}" attr:style="{{itemData.ladder.style}}">
         <ws:partial template="{{itemData.ladder.currentColumn.template}}" attr:class="controls-Grid__row-ladder-cell__content" contentData="{{itemData.ladder.currentColumn}}" />
      </div>
   </ws:if>
</ws:if>
<ws:else>
   <div attr:class="{{itemData.isHiddenGroup ? 'controls-ListView__hiddenGroup' : 'controls-Grid__row controls-ListView__group'}} controls-ListView__itemV" attr:key="{{itemData.item}}">
      <ws:partial template="{{groupTemplate}}" itemData="{{itemData}}"></ws:partial>
   </div>
</ws:else>