<div class="controls-Grid controls-Grid_{{_options.itemActionsType}}">
   <div class="controls-Grid__wrapper" style="grid-template-columns: {{_prepareGridTemplateColumns(_listModel.getColumns(), _listModel.getMultiselect())}};">
      <ws:if data="{{isNotFullGridSupport}}">
         <ws:partial template="tmpl!Controls/List/Grid/ColGroup" listModel="{{_listModel}}"/>
      </ws:if>
      <ws:if data="{{_listModel.getHeader()}}">
         <ws:partial template="tmpl!Controls/List/Grid/Header" listModel="{{_listModel}}" defaultHeaderContent="{{_headerContentTemplate}}"/>
      </ws:if>
      <ws:if data="{{_listModel.getResults() && _listModel.getResults().position === 'top'}}">
         <ws:partial template="tmpl!Controls/List/Grid/Results" userTemplate="{{_listModel.getResults().template}}" listModel="{{_listModel}}"/>
      </ws:if>
      <ws:partial template="tmpl!Controls/List/resources/For"
                  listModel="{{_listModel}}"
                  itemTemplate="{{_itemTemplate}}"
                  itemActionsTemplate="{{_options.itemActionsTemplate}}"
                  itemActionsType="{{_options.itemActionsType}}"/>
      <ws:if data="{{_listModel.getResults() && _listModel.getResults().position === 'bottom'}}">
         <ws:partial template="tmpl!Controls/List/Grid/Results" userTemplate="{{_listModel.getResults().template}}" listModel="{{_listModel}}"/>
      </ws:if>
   </div>
   <Controls.List.BaseControl.Scroll.Emitter on:emitListScroll="__onEmitScroll()" name="ScrollEmitter"/>
</div>