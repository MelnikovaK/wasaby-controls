<div attr:class="ws-ListView__item {{itemData.isSelected ? 'ws-ListView__item__selected'}}"
     on:onclick="_onItemClick(itemData.dispItem)"
     attr:key="{{itemData.dispItem.getHash()}}">
   <ws:if data="{{contentTemplate}}">
      <ws:partial
            template="{{contentTemplate}}"
            itemData="{{itemData}}"></ws:partial>
      </ws:if>
   <ws:else>
      <div>{{itemData.getPropValue(itemData.item, itemData.displayProperty)}}</div>
   </ws:else>
</div>