<Controls.Popup.Templates.Dialog.DialogTemplate class="controls-PanelFilter controls-PanelFilter__{{_options.size}}">
   <ws:topArea>
      <div class="controls-FilterPanel__header">
         <Controls.Header caption="{{_options.title}}" style="{{_options.styleHeader}}" size="l" readOnly="{{true}}"
                          class="controls-FilterPanel__header-title"/>
         <ws:if data="{{topTemplate}}">
            <div class="controls-FilterPanel__header-topTemplate">
               <ws:partial template="{{topTemplate}}"/>
            </div>
         </ws:if>
         <Controls.Button style="linkMain" readOnly="{{!_isChanged}}" caption="{[По умолчанию]}"
                          on:click="_resetFilter()"
                          name="resetButton"
                          attr:class="controls-FilterPanel__resetButton"/>

         <Controls.Button style="buttonPrimary" caption="{[Отобрать]}" on:click="_applyFilter()"
                          attr:class="controls-FilterPanel__filterButton"/>
      </div>
   </ws:topArea>
   <ws:contentArea>
      <div>

      <Controls.PropertyGrid items="{{_items}}" on:valueChanged="_valueChangedHandler()"
                             class="controls-FilterPanel__PropertyGrid"/>
      <Controls.Filter.Button.Panel.AdditionalParams if="{{_hasAdditionalParams}}" items="{{_items}}"
                                                     on:valueChanged="_valueChangedHandler()"/>
      </div>
   </ws:contentArea>
</Controls.Popup.Templates.Dialog.DialogTemplate>