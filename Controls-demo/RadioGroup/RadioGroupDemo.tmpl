<div>
    <div attr:class="exampleBlock">
        <h2>Radio group</h2>
        <Controls.Toggle.Radio
                attr:id="radioGroup1"
                attr:class="demo-RadioGroup"
                on:selectedKeyChanged="changeKey()"
                keyProperty="id"
                selectedKey="{{_selectKey}}"
                source="{{_source}}"
                direction="{{_selectedDirection}}"
                readOnly="{{_readOnly}}"
                itemTemplateProperty="{{_itemTemplatePropertyFlag ? 'templateTwo' : ''}}">
            <ws:itemTemplate>
                <ws:partial template="{{_itemTemplate}}" _contentTemplate="{{_contentTemplate}}" _contentTemplateFlag="{{_contentTemplateFlag}}"/>
            </ws:itemTemplate>
        </Controls.Toggle.Radio>
    </div>
    <div attr:class="optionsBlock">
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_readOnly" caption="ReadOnly"/>
        <br/>
        <Controls.Label caption="Direction:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeDirection()"
                keyProperty="title"
                selectedKey="{{_selectedDirection}}"
                source="{{_directionSource}}"
                direction="horizontal"
                readOnly="{{false}}"/>
        <Controls.Label caption="Source:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeSource()"
                keyProperty="title"
                selectedKey="{{_selectedSource}}"
                source="{{_sourceOfSource}}"
                direction="horizontal"
                readOnly="{{false}}"/>
        <br/>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_itemTemplatePropertyFlag" caption="ItemTemplateProperty === 'templateTwo'. Property set for the concrete(in demo 3) item."/>
        <br/>
        <Controls.Label caption="Item template:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeItemTemplate()"
                keyProperty="title"
                selectedKey="{{_selectedItemTemplate}}"
                source="{{_sourceItemTemplate}}"
                direction="horizontal"
                readOnly="{{false}}"/>
        <br/>
        <Controls.Label caption="Content template:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeContentTemplate()"
                keyProperty="title"
                selectedKey="{{_selectedContentTemplate}}"
                source="{{_sourceContentTemplate}}"
                direction="horizontal"
                readOnly="{{false}}"/>
    </div>
    <div class="eventBlock">
        <span>Event that surfaced:</span>
        <br/>
        <span>{{_eventName}}</span>
    </div>
</div>