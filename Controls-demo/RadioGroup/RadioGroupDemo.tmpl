<div>
    <div attr:class="exampleBlock">
        <h2>Верстка по умолчанию. Задан displayProperty.</h2>
        <Controls.Toggle.Radio
                attr:id="radioGroup1"
                attr:class="demo-RadioGroup"
                on:selectedKeyChanged="changeKey()"
                keyProperty="id"
                selectedKey="{{_selectKey}}"
                source="{{_source}}"
                direction="{{_selectedDirection}}"
                readOnly="{{_readOnly}}"
                itemTemplateProperty="templateTwo">
            <ws:itemTemplate>
                <ws:partial template='tmpl!Controls/Toggle/Radio/resources/ItemTemplate'
                            item="{{item}}"
                            readOnly="{{readOnly}}"
                            selected="{{selected}}"
                            displayProperty="caption">
                    <ws:contentTemplate>
                        <div style="padding: 4px;">
                            <div style="font-size: 11px; color: grey">{{itemTemplate.item.get('title')}}</div>
                        </div>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls.Toggle.Radio>
    </div>
    <div attr:class="optionsBlock">
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_readOnly" caption="ReadOnly"/>
        <br/>
        <Controls.Label caption="Direction:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeDirection()"
                keyProperty="title"
                selectedKey="{{_selectedDirection}}"
                source="{{_directionSource}}"
                direction="horizontal"
                readOnly="{{false}}"/>
        <Controls.Label caption="Caption position:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeSource()"
                keyProperty="title"
                selectedKey="{{_selectedSource}}"
                source="{{_sourceOfSource}}"
                direction="horizontal"
                readOnly="{{false}}"/>
    </div>
</div>