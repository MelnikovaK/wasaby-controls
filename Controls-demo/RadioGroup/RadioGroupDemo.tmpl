<div>
    <div attr:class="exampleBlock">
        <h2>Radio group</h2>
        <Controls.Toggle.RadioGroup
                attr:id="radioGroup1"
                attr:class="demo-RadioGroup"
                on:selectedKeyChanged="changeKey()"
                keyProperty="id"
                selectedKey="{{_selectKey}}"
                source="{{_source}}"
                direction="{{_selectedDirection}}"
                readOnly="{{_readOnly}}"
                itemTemplateProperty="{{_itemTemplatePropertyFlag ? 'templateTwo' : ''}}">
            <ws:itemTemplate>
                <ws:partial template='tmpl!Controls/Toggle/RadioGroup/resources/ItemTemplate'
                            item="{{item}}"
                            readOnly="{{readOnly}}"
                            selected="{{selected}}"
                            displayProperty="{{_displayProperty}}"
                            contentTemplate="{{_contentTemplate}}"/>
            </ws:itemTemplate>
        </Controls.Toggle.RadioGroup>
    </div>
    <div attr:class="optionsBlock">
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_readOnly" attr:test_name="readOnly" caption="ReadOnly"/>
        <br/>
        <Controls.Label caption="Direction:"/>
        <Controls.Input.ComboBox
                attr:class="comboboxWidth"
                source="{{_directionSource}}"
                keyProperty="title"
                placeholder="select"
                displayProperty="title"
                selectedKey="{{_selectedDirection}}"
                on:selectedKeyChanged="changeDirection()"
        />
        <Controls.Label caption="Source:"/>
        <Controls.Input.ComboBox
                attr:class="comboboxWidth"
                source="{{_sourceOfSource}}"
                keyProperty="title"
                placeholder="select"
                displayProperty="title"
                selectedKey="{{_selectedSource}}"
                on:selectedKeyChanged="changeSource()"
        />
        <br/>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_itemTemplatePropertyFlag" attr:test_name="item_tmpl" caption="ItemTemplateProperty === 'templateTwo'. Property set for the concrete(in demo 3) item."/>
        <br/>
        <Controls.Label caption="Content template:"/>
        <Controls.Input.ComboBox
                attr:class="comboboxWidth"
                source="{{_sourceContentTemplate}}"
                keyProperty="title"
                placeholder="select"
                displayProperty="title"
                selectedKey="{{_selectedContentTemplate}}"
                on:selectedKeyChanged="changeContentTemplate()"
        />
        <Controls.Label caption="Display property:"/>
        <Controls.Toggle.DoubleSwitch on:valueChanged="changedDisplayProperty()" captions="{{['caption', 'title']}}" bind:value="_displayPropertyValue"/>
        <Controls.Label caption="Selected key:"/>
        <Controls.Toggle.RadioGroup
                on:selectedKeyChanged="changeSelectedKey()"
                keyProperty="id"
                selectedKey="{{_selectKey}}"
                source="{{_source}}"
                direction="horizontal"
                readOnly="{{false}}">
            <ws:itemTemplate>
                <ws:partial template='tmpl!Controls/Toggle/RadioGroup/resources/ItemTemplate'
                            item="{{item}}"
                            readOnly="{{readOnly}}"
                            selected="{{selected}}"
                            displayProperty="id"/>
            </ws:itemTemplate>
        </Controls.Toggle.RadioGroup>
    </div>
    <div class="eventBlock">
        <span>Event that surfaced:</span>
        <Controls.Button attr:class="demo-ResetButton" on:click="reset()" style="linkMain3" caption="reset"/>
        <br/>
        <span>{{_eventName}}</span>
    </div>
</div>