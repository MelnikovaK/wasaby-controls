<div class="containers-demo">
    <div class="containers-demo_search">
        <Controls.Container.Data source="{{_sourceSearch}}" keyProperty="id">
            <ws:navigation source="page" view="page">
                <ws:sourceConfig pageSize="{{20}}" page="{{0}}" mode="totalCount"/>
            </ws:navigation>
            <ws:filter/>

            <ws:content>
                <Controls.Search.Container searchParam="firstName">
                    <div>
                        <Controls.Search.Input.Container>
                            <Controls.Input.Search bind:value="_searchValue"/>
                        </Controls.Search.Input.Container>

                        <Controls.List.Container>
                            <div>
                                <Controls.List>
                                    <ws:itemTemplate>
                                        <ws:partial template="tmpl!Controls/List/ItemTemplate">
                                            <ws:contentTemplate>
                                                <div style="padding: 4px; display: flex; justify-content: space-between">
                                                    <div style="width: 200px">{{itemTemplate.itemData.item.get('firstName')}}</div>
                                                    <div style="font-size: 13px; color: darkblue">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                                    <div style="font-size: 13px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                                </div>
                                            </ws:contentTemplate>
                                        </ws:partial>
                                    </ws:itemTemplate>
                                    <ws:emptyTemplate>
                                        Не найдено
                                    </ws:emptyTemplate>
                                </Controls.List>
                            </div>
                        </Controls.List.Container>
                    </div>
                </Controls.Search.Container>
            </ws:content>

        </Controls.Container.Data>
    </div>

    <div class="containers-demo_filter">
        <Controls.Container.Data source="{{_sourceFilter}}" keyProperty="id">
            <ws:navigation source="page" view="page">
                <ws:sourceConfig pageSize="{{20}}" page="{{0}}" mode="totalCount"/>
            </ws:navigation>
            <ws:filter/>

            <ws:content>
                <div>
                    <Controls.Filter.Container>
                            <Controls.List.Container>
                                    <Controls.List>
                                        <ws:itemTemplate>
                                            <ws:partial template="tmpl!Controls/List/ItemTemplate">
                                                <ws:contentTemplate>
                                                    <div style="padding: 4px; display: flex; justify-content: space-between">
                                                        <div style="width: 200px">{{itemTemplate.itemData.item.get('firstName')}}</div>
                                                        <div style="font-size: 13px; color: darkblue">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                                        <div style="font-size: 13px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                                    </div>
                                                </ws:contentTemplate>
                                            </ws:partial>
                                        </ws:itemTemplate>
                                        <ws:emptyTemplate>
                                            Не найдено
                                        </ws:emptyTemplate>
                                    </Controls.List>
                            </Controls.List.Container>
                    </Controls.Filter.Container>
                </div>
            </ws:content>

        </Controls.Container.Data>
    </div>
</div>