<Controls.EngineBrowser
        searchParam="title"
        source="{{_source}}"
        filterButtonSource="{{_items}}"
        fastFilterSource="{{_fastFilterSource}}"
        class="demo-browser">
   <ws:search>
      <Controls.Input.Search bind:value="value"/>
   </ws:search>

   <ws:topTemplate>
      <div class="demo-browser-topTemplate">
         <Controls.Button icon="icon-medium icon-AddButtonNew" style="iconButtonBordered" class="demo-browser-button"/>
         <Controls.Button icon="icon-medium icon-Unfavourite" style="linkMain" class="demo-browser=button"/>
      </div>
   </ws:topTemplate>
   <ws:fastFilter>
      <Controls.Filter.Fast/>
   </ws:fastFilter>
   <ws:filterButton>
      <Controls.Filter.Button templateName="tmpl!Controls-demo/EngineBrowser/resources/filterButtonEngineTemplate"/>
   </ws:filterButton>
   <ws:content>
      <Controls.List
              keyProperty="id"
              emptyTemplate="Не найдено">
         <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ItemTemplate">
               <ws:contentTemplate>
                  <div class="demo-browser-list">
                     <div><span class="demo-FilterSearch__department">{{itemTemplate.itemData.item.get('department')}}</span><span class="demo-FilterSearch__title">{{itemTemplate.itemData.item.get('owner')}}<span class="demo-FilterSearch__iconDep icon-16 icon-Company icon-disabled"></span> (78)</span></div>
                  </div>
               </ws:contentTemplate>
            </ws:partial>
         </ws:itemTemplate>
      </Controls.List>
   </ws:content>
</Controls.EngineBrowser>