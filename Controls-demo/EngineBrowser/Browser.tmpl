<Controls.EngineBrowser
        searchParam="title"
        source="{{_source}}">
   <ws:search>
      <Controls.Input.Search bind:value="value"/>
   </ws:search>
   <ws:content>
      <Controls.List
              keyProperty="id"
              emptyTemplate="Не найдено">
         <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ItemTemplate">
               <ws:contentTemplate>
                  <div>
                     <div>{{itemTemplate.itemData.item.get('title')}}</div>
                  </div>
               </ws:contentTemplate>
            </ws:partial>
         </ws:itemTemplate>
      </Controls.List>
   </ws:content>
</Controls.EngineBrowser>