<div style="padding: 20px;">
    <Controls.Validate.FormController name="formController1">
        <ws:content>
            <div>
                Validate/Input (Валидация происходит по focusOut)
                <Controls.Validate.Input name="InputValidate" attr:style="margin: 30px" attr:class="ControlsDemo-ValidateInfobox__inputValidate">
                    <ws:validators>
                        <ws:Function value="{{_value }}">Controls/Validate/Validators/IsINN</ws:Function>
                        <ws:Function value="{{_value }}">Controls/Validate/Validators/IsEmail</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox"
                                bind:value="_value"
                                placeholder="{{_placeholder}}"
                                tagStyle="primary"
                        />
                    </ws:content>
                </Controls.Validate.Input>
                <Controls.Validate.Input   name="InputValidate2" attr:style="margin: 30px" attr:class="ControlsDemo-ValidateInfobox_inputValidate2">
                    <ws:validators>
                        <ws:Function value="{{_value3 }}">Controls/Validate/Validators/IsINN</ws:Function>
                        <ws:Function value="{{_value3 }}">Controls/Validate/Validators/IsEmail</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox"
                                bind:value="_value3"
                                placeholder="{{_placeholder}}"
                                tagStyle="success"
                        />
                    </ws:content>
                </Controls.Validate.Input>
                 <Controls.Validate.Input name="InputValidate3" attr:style="margin: 30px">
                    <ws:validators>
                         <ws:Function value="{{_value6 }}">Controls-demo/Input/Validate/Validator</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox"
                                bind:value="_value6"
                                placeholder="{{_placeholder}}"
                                tagStyle="success"
                        />
                    </ws:content>
                </Controls.Validate.Input>
                <Controls.buttons:Button name="Panel" on:click="_openPanel()" caption="Panel" attr:class="ControlsDemo-ValidateInfobox_panel"/>
                <Controls.Popup.Opener.Stack name="opener"
                                             template="Controls-demo/Input/Validate/Text">
                </Controls.Popup.Opener.Stack>

            </div>
        </ws:content>
    </Controls.Validate.FormController>
    <Controls.Validate.FormController name="formController">
        <ws:content>
            <div>
                Validate/Controller(Кнопка запускает процесс валидации)
                <Controls.Validate.Controller  name="ControllerValidate"   attr:style="margin: 30px">
                    <ws:validators>
                        <ws:Function value="{{_value2}}" >Controls/Validate/Validators/IsRequired</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox2"
                                bind:value="_value2"
                                placeholder="Email"
                                tagStyle="primary"
                        />
                    </ws:content>
                </Controls.Validate.Controller>
                <Controls.Validate.Controller  name="ControllerValidate2"  attr:style="margin: 30px"  attr:class="ControlsDemo-ValidateInfobox_infobox">
                    <ws:validators>
                        <ws:Function value="{{_value1}}">Controls/Validate/Validators/IsEmail</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox5"
                                bind:value="_value1"
                                placeholder="Email"
                                tagStyle="primary"
                        />
                    </ws:content>
                </Controls.Validate.Controller>
                 <Controls.Validate.Controller  name="ControllerValidate3"  attr:style="margin: 30px">
                    <ws:validators>
                        <ws:Function value="{{_value5 }}">Controls/Validate/Validators/IsEmail</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox5"
                                bind:value="_value5"
                                placeholder="Email"
                                tagStyle="primary"
                        />
                    </ws:content>
                </Controls.Validate.Controller>
                 <Controls.Validate.Controller  readOnly = "{{true}}" name="ControllerValidate4"  attr:style="margin: 30px">
                    <ws:validators>
                        <ws:Function value="{{_value7 }}">Controls/Validate/Validators/IsEmail</ws:Function>
                    </ws:validators>
                    <ws:content>
                        <Controls.Input.Text
                                name="textBox5"
                                bind:value="_value7"
                                placeholder="Email"
                                tagStyle="primary"
                        />
                    </ws:content>
                </Controls.Validate.Controller>
            </div>
        </ws:content>
    </Controls.Validate.FormController>
    <Controls.buttons:Button caption="Submit"  name="updateButton" on:click="_clickHandler()" attr:class="ControlsDemo-ValidateInfobox_submit" />
</div>
