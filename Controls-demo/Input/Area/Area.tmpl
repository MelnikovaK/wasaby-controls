<div style="margin: 32px; display: flex; flex-direction: column; width: 18em;">
   <div style="padding: 3em; background-color: rgba(38,59,74,0.22)">
      <h2>Area</h2>
      <Controls.Label name="myLabel1" caption="Пример"/>
      <Controls.Input.Area bind:value="_text1"
                           placeholder="{{_placeholder}}"
                           constraint="{{_constraint}}"
                           validationErrors="{{_validationErrors}}"
                           trim="{{_trim}}"
                           maxLength="{{_maxLength}}"
                           minLines="{{_minLines}}"
                           maxLines="{{_maxLines}}"
                           tagStyle="{{_tagStyle}}"
                           enabled="{{_enabled}}"/>
   </div>
   <div style="padding: 3em; background-color: rgba(81,81,81,0.11) ">
      <h3>Задайте опции:</h3>
      <Controls.Label name="myLabel1" caption="placeholder"/>
      <Controls.Input.Text bind:value="_placeholder"/>
      <Controls.Label name="myLabel1" caption="tagStyle(варианты: attention, done, error, primary, disabled)"
                      attr:style="height: auto;"/>
      <Controls.Input.Text bind:value="_tagStyle"/>
      <Controls.Label name="myLabel1" caption="constraint"/>
      <Controls.Input.Text bind:value="_constraint"/>
      <Controls.Label name="myLabel1" caption="maxLength"/>
      <Controls.Input.Text bind:value="_maxLength"/>
      <Controls.Label name="myLabel1" caption="minLines"/>
      <Controls.Input.Text bind:value="_minLines"/>
      <Controls.Label name="myLabel1" caption="maxLines"/>
      <Controls.Input.Text bind:value="_maxLines"/>
      <div>
         <Controls.Toggle.Checkbox enabled="{{true}}" bind:value="_trim" caption="trim"/>
         <Controls.Toggle.Checkbox on:valueChanged="valueChangedHandler()" enabled="{{true}}"
                                      bind:value="_validationErrorsValue" caption="validationErrors"/>
         <br/>
         <Controls.Toggle.Checkbox enabled="{{true}}" bind:value="_enabled" caption="enabled"/>
      </div>
   </div>
</div>