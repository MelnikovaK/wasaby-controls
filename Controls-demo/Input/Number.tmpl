<div style="margin: 32px; display: flex; flex-direction: column; width: 18em;">
  <div style="padding: 3em; background-color: rgba(38,59,74,0.22)">
     <h2>Number</h2>
     <Controls:Label name="myLabel1" caption="Пример"/>
     <Controls:Input:Number bind:value="_text1"
                    placeholder="{{_placeholder}}"
                    integersLength="{{_integersLength}}"
                    tagStyle="{{_tagStyle}}"
                    precision="{{_precision}}"
                    onlyPositive="{{_onlyPositive}}"
                    enabled="{{_enabled}}"/>

  </div>
  <div style="padding: 3em; background-color: rgba(81,81,81,0.08)">
     <h3>Задайте опции:</h3>
     <Controls:Label name="myLabel1" caption="placeholder"/>
     <Controls:Input:Text bind:value="_placeholder"/>
     <Controls:Label name="myLabel1" caption="tagStyle"/>
     <p style="color: #9e9e9e">(варианты: attention, done, error, primary, disabled)</p>
     <Controls:Input:Text bind:value="_tagStyle"/>
     <Controls:Label name="myLabel1" caption="integersLength"/>
     <Controls:Input:Number bind:value="_integersLength"/>
     <Controls:Label name="myLabel1" caption="precision"/>
     <Controls:Input:Number bind:value="_precision"/>
     <div>
        <ws:Controls.Toggle.Checkbox enabled="{{true}}" bind:value="_enabled" caption="enabled"/>
        <ws:Controls.Toggle.Checkbox enabled="{{true}}" bind:value="_onlyPositive" caption="onlyPositive"/>
     </div>
  </div>
</div>