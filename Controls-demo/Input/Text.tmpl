<div style="margin: 32px; display: flex; flex-direction: column; width: 18em;">
   <div style="padding: 3em; background-color: rgba(38,59,74,0.22)">
      <h2>Text</h2>
      <Controls:Label name="myLabel1" caption="Пример"/>
      <Controls:Input:Text bind:value="_text1"
                     placeholder="{{_placeholder}}"
                     constraint="{{_constraint}}"
                     validationErrors="{{_validationErrors}}"
                     trim="{{_trim}}"
                     maxLength="{{_maxLength}}"/>
   </div>
   <div style="padding: 3em; background-color: rgba(81,81,81,0.11)">
      <h3>Задайте опции:</h3>
      <Controls:Label name="myLabel1" caption="placeholder"/>
      <Controls:Input:Text bind:value="_placeholder"/>
      <Controls:Label name="myLabel1" caption="constraint"/>
      <Controls:Input:Text bind:value="_constraint"/>
      <Controls:Label name="myLabel1" caption="maxLength"/>
      <Controls:Input:Text bind:value="_maxLength"/>
      <div>
         <ws:Controls.Toggle.Checkbox enabled="{{true}}" bind:value="_trim" caption="trim"/>
         <ws:Controls.Toggle.Checkbox on:valueChanged="valueChangedHandler()" enabled="{{true}}" bind:value="_validationErrorsValue" caption="validationErrors"/>
      </div>
   </div>
</div>