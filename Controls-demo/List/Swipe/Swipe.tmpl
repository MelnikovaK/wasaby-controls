<div class="itemActionsDemo">
     <h2>itemActionsType="inline"</h2>
    <Controls.List
            source = "{{_viewSource}}"
            markedKey="{{1}}"
            allowEmptySelection="{{false}}"
            idProperty="id"
            itemActions="{{_itemActions}}"
            on:actionClick="_onActionClick()"
            multiSelectVisibility="visible"
            class="itemActionsDemo__list">

        <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ItemTemplate">
                <ws:contentTemplate>
                        <div style="height:{{itemTemplate.itemData.item.get('id')=== 3 ?  _height : '36px'}}"  on:click="_contentClick( itemTemplate.itemData)">
                            <div class="height_item">text texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext texttext</div>
                        </div>
                </ws:contentTemplate>
            </ws:partial>
        </ws:itemTemplate>
    </Controls.List>
    <div>Высота строки</div>
    <ws:for data="height in _heightS">
        <div
            attr:class="height_button"
            on:click="_onHeightClick(height)">{{height}}</div>
    </ws:for>
    <div>Количество операций</div>
    <ws:for data="act in _actions">
        <div
                attr:class="height_button"
                on:click="_onActClick(act)">{{act}}</div>
    </ws:for>
    <div>Количество операций сейчас: {{_itemActions.length}}</div>
</div>