<div>
   <Controls.Container.Scroll attr:class="Demo-LoadMore__scroll">
      <Controls.list:View source="{{_viewSource}}" displayProperty="title" keyProperty="id" allowEmptySelection="{{false}}" navigation="{{_listNavigation}}"/>
   </Controls.Container.Scroll>
   <Controls.Container.Scroll attr:class="Demo-LoadMore__scroll">
      <Controls.grids:View source="{{_gridViewSource}}" keyProperty="id" allowEmptySelection="{{false}}" navigation="{{_listNavigation}}">
         <ws:columns>
            <ws:Array>
               <ws:Object displayProperty="title" width="1fr"/>
            </ws:Array>
         </ws:columns>
      </Controls.grids:View>
   </Controls.Container.Scroll>
</div>
