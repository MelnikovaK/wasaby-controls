<div class="editInPlaceDemo">
    <style>
        .ws-ListView__item {
            height: 30px;
            box-sizing: border-box;
            padding: 3px 4px;
            display: flex;
            align-items: center;
        }
        .editInPlaceDemo {
            padding-top: 30px;
        }
    </style>
    <div>
        <h3>Обычный список</h3>
        <Controls:List
                name="list"
                source="{{_viewSource}}"
                on:beginEdit="_onBeginEdit()"
                on:beginAdd="_onBeginAdd()"
                allowEmptySelection="{{false}}"
                idProperty="id">
            <ws:editingConfig>
                <ws:Object editOnClick="{{_editOnClick}}"
                           singleEdit="{{_singleEdit}}"
                           autoAdd="{{_autoAdd}}"/>
            </ws:editingConfig>
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                            itemData="{{itemTemplate.itemData}}">
                    <ws:contentTemplate>
                        <ws:partial template="tmpl!Controls-demo/List/EditInPlace/editingTemplate"
                                    itemData="{{itemTemplate.itemData}}"/>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls:List>
        <Controls:List:AddButton caption="Добавить запись" on:click="beginAdd()"/>
        <div attr:style="padding: 15px; background-color: rgba(81,81,81,0.11); width: 150px;">
            <h3>Задайте опции:</h3>
            <div>
                <ws:Controls.Toggle.Checkbox bind:value="_editOnClick" caption="editOnClick"/>
                <ws:Controls.Toggle.Checkbox bind:value="_singleEdit" caption="singleEdit"/>
                <ws:Controls.Toggle.Checkbox bind:value="_autoAdd" caption="autoAdd"/>
            </div>
        </div>
    </div>
    <div>
        <h3>В этом списке не работает добавление</h3>
        <Controls:List
                name="list2"
                source="{{_viewSource2}}"
                on:beginAdd="_cancelBeginAdd()"
                allowEmptySelection="{{false}}"
                idProperty="id">
            <ws:editingConfig>
                <ws:Object editOnClick="{{true}}"/>
            </ws:editingConfig>
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                            itemData="{{itemTemplate.itemData}}">
                    <ws:contentTemplate>
                        <ws:partial template="tmpl!Controls-demo/List/EditInPlace/editingTemplate"
                                    itemData="{{itemTemplate.itemData}}"/>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls:List>
        <Controls:List:AddButton caption="Добавить запись" on:click="list2.beginAdd()"/>
    </div>
    <div>
        <h3>В beginAdd вернётся Deferred</h3>
        <Controls:List
                name="list3"
                source="{{_viewSource3}}"
                on:beginAdd="_deferredBeginAdd()"
                allowEmptySelection="{{false}}"
                idProperty="id">
            <ws:editingConfig>
                <ws:Object editOnClick="{{true}}"/>
            </ws:editingConfig>
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                            itemData="{{itemTemplate.itemData}}">
                    <ws:contentTemplate>
                        <ws:partial template="tmpl!Controls-demo/List/EditInPlace/editingTemplate"
                                    itemData="{{itemTemplate.itemData}}"/>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls:List>
        <Controls:List:AddButton caption="Добавить запись" on:click="list3.beginAdd()"/>
    </div>
    <div>
        <h3>Редактирование стартует при отрисовке</h3>
        <Controls:List
                name="list4"
                source="{{_viewSource4}}"
                allowEmptySelection="{{false}}"
                idProperty="id">
            <ws:editingConfig>
                <ws:Object editOnClick="{{true}}" item="{{_editingItem}}"/>
            </ws:editingConfig>
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                            itemData="{{itemTemplate.itemData}}">
                    <ws:contentTemplate>
                        <ws:partial template="tmpl!Controls-demo/List/EditInPlace/editingTemplate"
                                    itemData="{{itemTemplate.itemData}}"/>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls:List>
    </div>
    <div>
        <h3>Добавление стартует при отрисовке</h3>
        <Controls:List
                name="list5"
                source="{{_viewSource5}}"
                allowEmptySelection="{{false}}"
                idProperty="id">
            <ws:editingConfig>
                <ws:Object editOnClick="{{true}}" item="{{_addItem}}"/>
            </ws:editingConfig>
            <ws:itemTemplate>
                <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                            itemData="{{itemTemplate.itemData}}">
                    <ws:contentTemplate>
                        <ws:partial template="tmpl!Controls-demo/List/EditInPlace/editingTemplate"
                                    itemData="{{itemTemplate.itemData}}"/>
                    </ws:contentTemplate>
                </ws:partial>
            </ws:itemTemplate>
        </Controls:List>
    </div>
</div>