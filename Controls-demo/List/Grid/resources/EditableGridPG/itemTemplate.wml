<ws:partial template="Controls/grid:ItemTemplate" scope="{{_options}}">
    <ws:contentTemplate>
        <ws:partial template="Controls/list:EditingTemplate"
                    value="{{ contentTemplate.itemData.item.title }}" enabled="{{true}}">
            <ws:editorTemplate>
                <Controls.input:Text bind:value="itemData.item.title"
                                     selectOnClick="{{ false }}" />
            </ws:editorTemplate>
        </ws:partial>
    </ws:contentTemplate>
</ws:partial>
