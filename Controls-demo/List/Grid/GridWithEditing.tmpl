<div>
    <div class="demo-Grid">
        <h3>С тулбаром</h3>
        <Controls.List.AddButton caption="Add record" on:click="list.addItem()" class="test_add_record_1"/>
        <div class="demo-Grid__container">
            <Controls.Container.Scroll attr:class="demo-Grid__wrapper">
                <Controls.Grid
                        name="list"
                        attr:class="demo-Grid__control test_grid_1"
                        attr:test_name="test_grid_1"
                        keyProperty="id"
                        displayProperty="title"
                        markedKey="{{448390}}"
                        multiselect="{{true}}"
                        header="{{gridHeader}}"
                        source = "{{_viewSource}}"
                        columns="{{gridColumns}}"
                        itemActions="{{_itemActions}}"
                        on:actionClick="_onActionClick()"
                        itemActionVisibilityCallback="{{_showAction}}"
                        itemActionsType="outside">
                    <ws:editingConfig>
                        <ws:Object editOnClick="{{true}}" autoAdd="{{true}}" showToolbar="{{true}}"/>
                    </ws:editingConfig>
                </Controls.Grid>
            </Controls.Container.Scroll>
        </div>
    </div>
