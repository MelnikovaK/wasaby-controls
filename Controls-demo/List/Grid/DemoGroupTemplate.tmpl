<ws:partial template="tmpl!Controls/List/Grid/GroupContentTemplate" itemData="{{itemData}}" columnAlignGroup="{{1}}">
   <ws:contentTemplate><span>
      <ws:if data="{{itemData.item === 'nonexclusive'}}">Неисключительные права</ws:if>
      <ws:if data="{{itemData.item === 'works'}}">Работы</ws:if>
      <ws:if data="{{itemData.item === 'goods'}}">Товары и материалы</ws:if>
   </span></ws:contentTemplate>
   <ws:rightTemplate>
      <ws:partial template="tmpl!Controls/List/GroupContentResultsTemplate" itemData="{{itemData}}">
         <ws:contentTemplate>
            <ws:Controls.Decorator.Money number="{{itemData.metaData.groupResults[itemData.item]}}" style="group"/>
         </ws:contentTemplate>
      </ws:partial>
   </ws:rightTemplate>
</ws:partial>