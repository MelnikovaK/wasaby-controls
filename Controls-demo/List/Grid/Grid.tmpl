<div class="demo-Grid">
   <div class="demo-Grid__container">
      <Controls.Container.MassSelector
              selectedKeys="{{['448390']}}"
              name="massSelector">
         <Controls.Container.Scroll attr:class="demo-Grid__wrapper">
            <ws:content>
               <Controls.List.MassSelector>
                  <Controls.Grid
                                attr:class="demo-Grid__control"
                                keyProperty="id"
                                displayProperty="title"
                                markedKey="{{448390}}"
                                multiSelectVisibility="visible"
                                header="{{gridHeader}}"
                                itemTemplate="tmpl!Controls-demo/List/Grid/DemoItem"
                                source = "{{_viewSource}}"
                                itemActions="{{_itemActions}}"
                                on:actionClick="_onActionClick()"
                                itemActionVisibilityCallback="{{_showAction}}"
                                itemActionsType="outside"
                                columns="{{gridColumns}}">
                  </Controls.Grid>
               </Controls.List.MassSelector>
            </ws:content>
         </Controls.Container.Scroll>
      </Controls.Container.MassSelector>
