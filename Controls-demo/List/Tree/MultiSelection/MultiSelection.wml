<div class="demo-Grid">
    <div class="demo-Grid__container">
        <Controls.list:DataContainer source="{{_viewSource}}" keyProperty="id">
            <Controls.operations:Controller>
                <Controls.Container.Scroll attr:class="demo-Grid__wrapper">
                    <Controls.list:Container>
                        <Controls.operations:Container>
                            <Controls.treeGrid:View
                                    name="list"
                                    attr:class="demo-Grid__control"
                                    keyProperty="id"
                                    parentProperty="Раздел"
                                    nodeProperty="Раздел@"
                                    multiSelectVisibility="visible"
                                    columns="{{gridColumns}}">
                            </Controls.treeGrid:View>
                        </Controls.operations:Container>
                    </Controls.list:Container>
                </Controls.Container.Scroll>
            </Controls.operations:Controller>
        </Controls.list:DataContainer>
    </div>
</div>
