<div class="123">
    <h2>Default</h2>
    <Controls:List
            dataSource = "{{_viewSource}}"
            selectedKey="{{2}}"
            allowEmptySelection="{{false}}"
            idProperty="id">
    </Controls:List>

    <h2>Display property</h2>
    <Controls:List
            dataSource = "{{_viewSource}}"
            selectedKey="{{2}}"
            allowEmptySelection="{{false}}"
            idProperty="id">
        <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ListControl/ItemTemplate"
                        itemData="{{itemTemplate.itemData}}"
                        displayProperty="description"
            ></ws:partial>
        </ws:itemTemplate>
    </Controls:List>

    <h2>Without marker</h2>
    <Controls:List
            dataSource = "{{_viewSource}}"
            selectedKey="{{2}}"
            allowEmptySelection="{{false}}"
            idProperty="id">
        <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ListControl/ItemTemplate"
                        itemData="{{itemTemplate.itemData}}"
                        marker="{{false}}"
            ></ws:partial>
        </ws:itemTemplate>
    </Controls:List>

    <h2>Custom render</h2>
    <Controls:List
            dataSource = "{{_viewSource}}"
            selectedKey="{{2}}"
            allowEmptySelection="{{false}}"
            idProperty="id">
        <ws:itemTemplate>
            <ws:partial template="tmpl!Controls/List/ListControl/ItemTemplate"
                        itemData="{{itemTemplate.itemData}}"
            >
                <ws:contentTemplate>
                    <div style="padding: 4px;">
                        <div>{{itemTemplate.itemData.item.get('title')}}</div>
                        <div style="font-size: 11px; color: grey">{{itemTemplate.itemData.item.get('description')}}</div>
                    </div>
                </ws:contentTemplate>
            </ws:partial>
        </ws:itemTemplate>
    </Controls:List>
</div>