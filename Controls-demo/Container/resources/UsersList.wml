<Controls.scroll:Container shadowVisibility="{{showShadow}}" scrollbarVisibility="{{showScrollbar}}">
   <Controls.list:View source="{{usersSource}}" keyProperty="id">
      <ws:itemTemplate>
         <ws:partial marker="{{true}}"
                     template="Controls/list:ItemTemplate">
            <ws:contentTemplate>
               <ws:partial showStatus="{{true}}"
                           user="{{itemTemplate.itemData.item}}"
                           template="wml!Controls-demo/Container/resources/User"/>
            </ws:contentTemplate>
         </ws:partial>
      </ws:itemTemplate>
   </Controls.list:View>
</Controls.scroll:Container>