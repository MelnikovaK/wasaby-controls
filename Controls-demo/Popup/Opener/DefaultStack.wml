<Controls.Popup.Templates.Stack.StackTemplate caption="Stack Template">
    <ws:headerContentTemplate>
        <div style="display: flex;justify-content: flex-end;flex-grow: 1;">
            <Controls.Button caption="Закрыть" on:click="_close()" attr:ws-no-focus="true" attr:tabindex="-1"/>
        </div>
    </ws:headerContentTemplate>
    <ws:bodyContentTemplate>
        <div style="width: {{ _options.width || '700px'}}">
            <div class="dialog-content">
                <Controls.Input.Text placeholder="Название"  />
                <Controls.Input.Text placeholder="Описание" value="{{value}}" />
            </div>
        </div>
    </ws:bodyContentTemplate>
</Controls.Popup.Templates.Stack.StackTemplate>
