<Controls.Popup.Templates.Stack.StackTemplate headingCaption="PopupManager" maximized="{{_options.maximized}}" maximizeButtonVisibility="{{_options.showMaximizedButton}}">
    <ws:headerContentTemplate>
        <div style="display: flex;justify-content: flex-end;flex-grow: 1;">
            <Controls.buttons:Button caption="Закрыть {{_options.type}}" on:click="_close()"/>
        </div>
    </ws:headerContentTemplate>
    <ws:bodyContentTemplate>
        <Controls.input:Text value="maximized: {{_options.maximized}} | showMaximizedButton: {{_options.showMaximizedButton}}" />
    </ws:bodyContentTemplate>
</Controls.Popup.Templates.Stack.StackTemplate>