<div>
    <h3>Кликабельный</h3>
    <Controls:Toggle:Switch bind:value="value" caption="On" />
    <h3>Кликабельный, в режиме чтения</h3>
    <Controls:Toggle:Switch enabled="{{false}}" bind:value="value1" caption="On" />
    <h3>Выключен</h3>
    <Controls:Toggle:Switch />
    <h3>Включен</h3>
    <Controls:Toggle:Switch value="{{true}}"/>
    <h3>Выключен, с caption</h3>
    <Controls:Toggle:Switch caption = "On"/>
    <h3>Включен, с caption</h3>
    <Controls:Toggle:Switch value="{{true}}" caption = "On"/>
    <h3>В режиме чтения, выключен</h3>
    <Controls:Toggle:Switch enabled="{{false}}" />
    <h3>В режиме чтения, включен</h3>
    <Controls:Toggle:Switch enabled="{{false}}" value="{{true}}"/>
    <h3>В режиме чтения, выключен, с caption</h3>
    <Controls:Toggle:Switch enabled="{{false}}" caption = "On"/>
    <h3>В режиме чтения, включен, с caption</h3>
    <Controls:Toggle:Switch enabled="{{false}}" value="{{true}}" caption = "On"/>
