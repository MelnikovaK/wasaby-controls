<div>
    <div class="exampleBlock">
        <h2>DoubleSwitch</h2>
        <Controls.Toggle.DoubleSwitch on:valueChanged="changeValue()" readOnly="{{_readOnly}}" value="{{_value}}" captions="{{[_caption1, _caption2]}}" orientation="{{_selectedOrientation}}"/>
    </div>
    <div class="optionsBlock">
        <h3>Options</h3>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_readOnly" caption="ReadOnly"/>
        <br/>
        <Controls.Label caption="First caption"/>
        <Controls.Input.Text bind:value="_caption1"/>
        <Controls.Label caption="Second caption"/>
        <Controls.Input.Text bind:value="_caption2"/>
        <Controls.Label caption="Orientation:"/>
        <Controls.Toggle.Radio
                on:selectedKeyChanged="changeOrientation()"
                keyProperty="title"
                selectedKey="{{_selectedOrientation}}"
                source="{{_orientationSource}}"
                direction="horizontal"
                readOnly="{{false}}"/>
        <br/>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_value" caption="value"/>
    </div>
    <div class="eventBlock">
        <span>Event that surfaced:</span>
        <Controls.Button attr:class="demo-ResetButton" on:click="reset()" style="linkMain3" caption="reset"/>
        <br/>
        <span>{{_eventName}}</span>
    </div>
</div>