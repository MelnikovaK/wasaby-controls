<div>
    <div class="exampleBlock">
        <h2>DoubleSwitch</h2>
        <Controls.Toggle.DoubleSwitch attr:test_name="demo_switch" on:valueChanged="changeValue()" readOnly="{{_readOnly}}" value="{{_value}}" bind:tooltip="_tooltip" captions="{{[_caption1, _caption2]}}" orientation="{{_selectedOrientation}}"/>
    </div>
    <div class="optionsBlock">
        <h3>Options</h3>
        <Controls.Toggle.Checkbox attr:test_name="readOnly" readOnly="{{false}}" bind:value="_readOnly" caption="ReadOnly"/>
        <br/>
        <Controls.Label caption="First caption"/>
        <Controls.Input.Text attr:test_name="caption" bind:value="_caption1"/>
        <Controls.Label caption="Second caption"/>
        <Controls.Input.Text attr:test_name="caption2"bind:value="_caption2"/>
        <Controls.Label caption="Tooltip"/>
        <Controls.Input.Text attr:test_name="tooltip" bind:value="_tooltip"/>
        <Controls.Label caption="Orientation:"/>
        <Controls.Input.ComboBox
                attr:test_name="direction"
                source="{{_orientationSource}}"
                keyProperty="title"
                placeholder="select"
                displayProperty="title"
                emptyText="none"
                selectedKey="{{_selectedOrientation}}"
                on:selectedKeyChanged="changeOrientation()"
        />
        <br/>
        <Controls.Toggle.Checkbox attr:test_name="value" readOnly="{{false}}" bind:value="_value" caption="value"/>
    </div>
    <div class="eventBlock">
        <span>Event that surfaced:</span>
        <Controls.Button attr:class="demo-ResetButton" on:click="reset()" style="linkMain3" caption="reset"/>
        <br/>
        <span id="eventName">{{_eventName}}</span>
    </div>
</div>