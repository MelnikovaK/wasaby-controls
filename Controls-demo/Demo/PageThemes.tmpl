<ws:partial template="Controls/Application" scope="{{_options}}" bodyClass="controls-default-bg" theme="{{_theme}}">
   <div class="ControlsDemo-Page ws-flexbox ws-flex-column">
      <div class="themeSwitcher">
         <div class="theme_button" on:click="changeTheme('online')">online</div>
         <div class="theme_button" on:click="changeTheme('carry_medium')">carry_m</div>
         <div class="theme_button theme_dark" on:click="changeTheme('presto_medium')">presto_m</div>
         <div class="theme_button" on:click="changeTheme('carry')">carry</div>
         <div class="theme_button theme_dark" on:click="changeTheme('presto')">presto</div>
      </div>
      <Controls.buttons:Button if="{{componentName !== 'Controls-demo/Index'}}" attr:id="Back" caption="Назад" style="secondary" viewMode="link" icon="icon-16 icon-DayBackward icon-primary" on:click="backClickHdl()" />
      <Controls.scroll:Container attr:class="ControlsDemo-Page_scrollContainer">
         <Controls.Container.Async templateName="{{componentName}}" attr:id="newListView" attr:class="ControlsDemo-Page_content" />
      </Controls.scroll:Container>
   </div>
</ws:partial>