<div class="controls-InfoBoxDemo">
   <Controls.popup:Infobox name="IBOpener"></Controls.popup:Infobox>

   <ws:for data="block in _blocks">
      <div class="controls-InfoBoxDemo-block">
         <div class="controls-InfoBoxDemo-header">{{block.header}}</div>
      </div>
      <div class="controls-InfoBoxDemo-targets">
         <ws:for data="item in block.items">
            <div class="controls-InfoBoxDemo-target controls-InfoBoxDemo-target-standard controls-InfoBoxDemo__{{item.text.toLowerCase().replace(' ', '')}}" on:mouseenter="_open(item.cfg)" on:touchstart="_openTouch(item.cfg)">
               {{item.text}}
            </div>
         </ws:for>
      </div>
   </ws:for>

    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__top-right"
                              attr:style="position: absolute; right: 0px; top: 6px"
                              on:mouseenter="_open(_cfgRight)"/>
    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__bottom-right"
                              attr:style="position: absolute; right: 0px; bottom: 5px"
                              on:mouseenter="_open(_cfgRight)"/>
    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__top-left"
                              attr:style="position: absolute; left: 0px; top: 6px"
                              on:mouseenter="_open(_cfgLeft)"/>
    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__bottom-left"
                              attr:style="position: absolute; left: 0px; bottom: 5px"
                              on:mouseenter="_open(_cfgLeft)"/>
    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__top"
                              attr:style="position: absolute"
                              on:mouseenter="_open(_cfgTop)"/>
    <Controls._buttons.Button viewMode ='link'
                              icon="icon-EmptyMessage icon-medium"
                              attr:class="controls-InfoBoxDemo__bottom"
                              attr:style="position: absolute; bottom: 0px"
                              on:mouseenter="_open(_cfgBottom)"/>


  <div style="margin-bottom: 30px ">
      <div class="controls-InfoBoxDemo-block">
         <div class="controls-InfoBoxDemo-header">{{'ICONS'}}</div>
      </div>
        <ws:for data="item in _icons">
            <div class="controls-InfoBoxDemo-targets controls-InfoBoxDemo__{{item.items[0].cfg.size}}">
            <ws:for data="config in item.items">
                 <div class="controls-InfoBoxDemo-icon">
                <Controls._buttons.Button viewMode ='link'
                                          attr:class="controls-InfoBoxDemo__{{config.cfg.size}}-{{config.cfg.position}}"
                                          icon="icon-EmptyMessage icon-{{config.cfg.size}}"
                                          on:mouseenter="_open(config.cfg)"/>
                 </div>
            </ws:for>
            </div>
        </ws:for>
  </div>

</div>