         <div class="controls-InfoBoxDemo-target">Наведите</div>
      </ws:content>
      <ws:template>
         <div>Это всплывающая подсказка.</div>
      </ws:template>
   </Controls.Popup.InfoBox>
   <Controls.Popup.InfoBox trigger="click">
      <ws:content>
         <div class="controls-InfoBoxDemo-target">Нажмите</div>
      </ws:content>
      <ws:template>
         <div>Это всплывающая подсказка.</div>
      </ws:template>
   </Controls.Popup.InfoBox>
   <Controls.Popup.InfoBox trigger="demand" on:dblclick="_dblClickHandler()" name="demandInfobox">
