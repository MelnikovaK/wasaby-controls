<div class="root">
    <div class="separator">Style="default"</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey1'
                      keyProperty="id"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" content="выполненные" align="left"/>
                        <ws:Object id="2" content="от меня" align="left"/>
                        <ws:Object id="3" content="заброшенные" align="left"/>
                        <ws:Object id="4" content="слишком"/>
                        <ws:Object id="5" content="тяжело"/>
                        <ws:Object id="6" content="придумывать"/>
                        <ws:Object id="7" content="названия"/>
                        <ws:Object id="8" content="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="default", with main tab</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey2'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" content="Главная" align="left"  itemTemplate="{{_mainTemplate}}"/>
                        <ws:Object id="2" content="слишком"/>
                        <ws:Object id="3" content="тяжело"/>
                        <ws:Object id="4" content="придумывать"/>
                        <ws:Object id="5" content="названия"/>
                        <ws:Object id="6" content="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="additional"</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey3'
                      keyProperty="id"
                      style="additional"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" content="первая" align="left"/>
                        <ws:Object id="2" content="слишком"/>
                        <ws:Object id="3" content="тяжело"/>
                        <ws:Object id="4" content="придумывать"/>
                        <ws:Object id="5" content="названия"/>
                        <ws:Object id="6" content="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="additional", with space template</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey4'
                      keyProperty="id"
                      style="additional"
                      tabSpaceTemplate="{{_spaceTemplate}}"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" content="Первая" align="left" />
                        <ws:Object id="2" content="названия"/>
                        <ws:Object id="3" content="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="default", with main item template</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey5'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1"
                                   content="Первая"
                                   align="left"
                                   style="main"
                                   itemTemplate="{{_itemTemplate}}"
                        />
                        <ws:Object id="2" content="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">
        <span>Style="default", Source after click</span>
        <div class="clickmebtn" on:click="_setSource()">click me</div>
    </div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey6'
                      keyProperty="id"
                      name="lazy"
                      source = "{{_lazySource}}"
        />

    </div>
</div>