<div class="root">
    <div class="separator">Style="default"</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey1'
                      keyProperty="id"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" title="выполненные" align="left"/>
                        <ws:Object id="2" title="от меня" align="left"/>
                        <ws:Object id="3" title="заброшенные" align="left"/>
                        <ws:Object id="4" title="слишком"/>
                        <ws:Object id="5" title="тяжело"/>
                        <ws:Object id="6" title="придумывать"/>
                        <ws:Object id="7" title="названия"/>
                        <ws:Object id="8" title="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="default", with main tab</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey2'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" title="Главная" align="left"  itemTemplate="{{_mainTemplate}}"/>
                        <ws:Object id="2" title="слишком"/>
                        <ws:Object id="3" title="тяжело"/>
                        <ws:Object id="4" title="придумывать"/>
                        <ws:Object id="5" title="названия"/>
                        <ws:Object id="6" title="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="additional", displayProperty = 'carambola'</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey3'
                      keyProperty="id"
                      style="additional"
                      displayProperty="carambola"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" carambola="первая" align="left"/>
                        <ws:Object id="2" carambola="слишком"/>
                        <ws:Object id="3" carambola="тяжело"/>
                        <ws:Object id="4" carambola="придумывать"/>
                        <ws:Object id="5" carambola="названия"/>
                        <ws:Object id="6" carambola="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="additional", with space template</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey4'
                      keyProperty="id"
                      style="additional"
                      tabSpaceTemplate="{{_spaceTemplate}}"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1" title="Первая" align="left" />
                        <ws:Object id="2" title="названия"/>
                        <ws:Object id="3" title="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">Style="default", with main item template</div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey5'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                <ws:data>
                    <ws:Array>
                        <ws:Object id="1"
                                   title="Первая"
                                   align="left"
                                   style="main"
                                   itemTemplate="{{_itemTemplate}}"
                        />
                        <ws:Object id="2" title="вкладок"/>
                    </ws:Array>
                </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
    <div class="separator">
        <span>Style="default", Source after click</span>
        <div class="clickmebtn" on:click="_setSource()">click me</div>
    </div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey6'
                      keyProperty="id"
                      name="lazy"
                      source = "{{_lazySource}}"
        />

    </div>
    <div class="separator">Style="default", with Photo item template</div>
    <div class="photo_before_bg"></div>
    <div class="">
        <Controls:Tabs:Buttons
                      bind:selectedKey='SelectedKey7'
                      keyProperty="id"
                      style="additional"
                      itemTemplateProperty="carambola"
        >
            <ws:source module="WS.Data/Source/Memory" >
                <ws:options idProperty="id">
                    <ws:data>
                        <ws:Array>
                            <ws:Object id="1"
                                       title=""
                                       carambola="{{_photoContent}}"
                                       align="left"
                                       type="photo"
                            />
                            <ws:Object id="2" title="слишком"   align="left"/>
                            <ws:Object id="3" title="тяжело"   align="left"/>
                            <ws:Object id="4" title="придумывать"   align="left"/>
                            <ws:Object id="5" title="названия"   align="left"/>
                            <ws:Object id="6" title="вкладок"/>
                        </ws:Array>
                    </ws:data>
                </ws:options>
            </ws:source>
        </Controls:Tabs:Buttons>
    </div>
</div>