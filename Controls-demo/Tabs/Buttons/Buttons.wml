<div class="root">
    <div class="separator">Style="primary"</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey1'
                      keyProperty="id"
                      source="{{_source1}}"
        />
    </div>
    <div class="separator">Style="primary" Without right align tabs</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                bind:selectedKey="SelectedKey8"
                keyProperty="id"
                source="{{_source8}}"
        />
    </div>
    <div class="separator">Style="primary", with main tab</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey2'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
                      source="{{_source2}}"
        />
     </div>
    <div class="separator">Style="secondary", set displayProperty</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey3'
                      keyProperty="id"
                      style="secondary"
                      source="{{_source3}}"
        >
            <ws:itemTemplate>
                <ws:partial template="wml!Controls/Tabs/Buttons/ItemTemplate"
                            item="{{itemTemplate.item}}"
                            displayProperty="carambola"
                ></ws:partial>
            </ws:itemTemplate>
        </Controls.tabs:Buttons>
    </div>
    <div class="separator">Style="secondary", with space template</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey4'
                      keyProperty="id"
                      style="secondary"
                      tabSpaceTemplate="{{_spaceTemplate}}"
                      source="{{_source4}}"
        />
    </div>
    <div class="separator">Style="primary", with main item template</div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey5'
                      keyProperty="id"
                      itemTemplateProperty="itemTemplate"
                      source="{{_source5}}"
        />
    </div>
    <div class="separator">
        <span>Style="primary", change source after click</span>
        <div class="clickmebtn" on:click="_setSource()">click me</div>
    </div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey6'
                      keyProperty="id"
                      name="lazy"
                      source = "{{_source6}}"
        />

    </div>
    <div class="separator">Style="secondary", with Photo item template</div>
    <div class="photo_before_bg"></div>
    <div class="demo-TabButtons">
        <Controls.tabs:Buttons
                      bind:selectedKey='SelectedKey7'
                      keyProperty="id"
                      style="secondary"
                      itemTemplateProperty="carambola"
                      source = "{{_source7}}"
        />
    </div>
</div>