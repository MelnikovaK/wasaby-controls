<Controls.Application title="Демо-пример: Разделители(заголовки), кнопка назад."
                      appRoot="/materials/"
                      head='<link rel="stylesheet" href="/materials/resources/SBIS3.CONTROLS/themes/online/online.css" type="text/css" />'>
    <div class="demo__header">
        <h2>Заголовки</h2>
        <h3>Крупный загловок</h3>
        <div>
            <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{true}}" style="default" size="xl"/>
            <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{true}}" style="primary" size="xl"/>
        </div>
        <h2>Загловок с кликом и без</h2>
        <div>
            <div>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="default" size="l"/>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="default" size="m"/>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="default" size="s"/>
            </div>
            <div>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="primary" size="l"/>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="primary" size="m"/>
                <Controls.Header attr:class="test_element" caption="Заголовок" readOnly="{{false}}" style="primary" size="s"/>
            </div>
        </div>
        <h2>Заголовки со счетчиками</h2>
        <div>
            <div attr:class="Header_Counter__wrapper test_element">
                <Controls.Header caption="test header" style="default" size="l"/>
                <Controls.Header.Counter attr:class="counter" value="{{12}}" style="primary" size="l"/>
            </div>
            <div attr:class="Header_Counter__wrapper test_element">
                <Controls.Header caption="test header" style="default" size="m"/>
                <Controls.Header.Counter attr:class="counter" value="{{12}}" style="disabled" size="m"/>
            </div>
            <div attr:class="Header_Counter__wrapper test_element">
                <Controls.Header caption="test header" style="primary" size="s"/>
                <Controls.Header.Counter attr:class="counter" value="{{12}}" style="default" size="s"/>
            </div>
        </div>
        <h2>Разделители</h2>
        <h3>Разделители-заголовки со счетчиком и без. Счетчик опционально</h3>
        <div>
            <div>
                <div attr:class="test_element Header_Counter__wrapper">
                    <Controls.Header caption="test header" style="default" size="l"/>
                    <Controls.Header.Separator/>
                </div>
                <div attr:class="test_element Header_Counter__wrapper">
                    <Controls.Header caption="test header" style="primary" size="m"/>
                    <Controls.Header.Separator/>
                </div>
            </div>
            <div>
                <div attr:class="test_element Header_Counter__wrapper">
                    <Controls.Header caption="test header" style="default" size="l"/>
                    <Controls.Header.Counter attr:class="counter" value="{{12}}" style="disabled" size="l"/>
                    <Controls.Header.Separator/>
                </div>
                <div attr:class="test_element Header_Counter__wrapper">
                    <Controls.Header caption="test header" style="primary" size="m"/>
                    <Controls.Header.Counter attr:class="counter" value="{{12}}" style="disabled" size="m"/>
                    <Controls.Header.Separator/>
                </div>
            </div>
        </div>
        <h3>Разделитель-кнопка для показа/скрытия контента</h3>
        <div class="demo__block">
            <div attr:class="test_element">
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Main" value="{{_iconValue}}"/>
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Additional" value="{{_iconValue}}"/>
            </div>
            <div attr:class="test_element">
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{false}}" style="Accent" value="{{_iconValue}}"/>
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{false}}" style="Main" value="{{_iconValue}}"/>
                <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{false}}" style="Additional" value="{{_iconValue}}"/>
            </div>
            <Controls.Button.BigSeparator on:click="clickIcon()" value="{{_iconValue}}"/>
        </div>
        <h3>Разделитель кнопка для показа скрытия контента общим кликабельным заголовком</h3>
        <div>
            <div class="demo__block">
                <div attr:class="test_element">
                    <Controls.Header on:click="clickIcon()" caption="test header" style="default" size="l"/>
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                </div>
                <div attr:class="test_element">
                    <Controls.Header on:click="clickIcon()" caption="test header" style="default" size="l"/>
                    <Controls.Header.Counter on:click="clickIcon()" attr:class="counter" value="{{12}}" style="disabled" size="m"/>
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                </div>
            </div>
            <div class="demo__block">
                <div attr:class="test_element">
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                    <Controls.Header on:click="clickIcon()" caption="test header" style="default" size="l"/>
                </div>
                <div attr:class="test_element">
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                    <Controls.Header.Counter on:click="clickIcon()" attr:class="counter-left-direction" value="{{12}}" style="disabled" size="m"/>
                    <Controls.Header on:click="clickIcon()" caption="test header" style="default" size="l"/>
                </div>
            </div>
        </div>
        <h3>Разделитель кнопка для показа скрытия контента с отдельно кликабельным заголовком</h3>
        <div>
            <div class="demo__block">
                <div attr:class="test_element">
                    <Controls.Header caption="test header" style="default" size="l"/>
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                </div>
                <div attr:class="test_element">
                    <Controls.Header caption="test header" style="default" size="l"/>
                    <Controls.Header.Counter attr:class="counter" value="{{12}}" style="disabled" size="m"/>
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                </div>
            </div>
            <div class="demo__block">
                <div attr:class="test_element">
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                    <Controls.Header caption="test header" style="default" size="l"/>
                </div>
                <div attr:class="test_element">
                    <Controls.Button.ButtonSeparator on:click="clickIcon()" bold="{{true}}" style="Accent" value="{{_iconValue}}"/>
                    <Controls.Header.Counter attr:class="counter-left-direction" value="{{12}}" style="disabled" size="m"/>
                    <Controls.Header caption="test header" style="default" size="l"/>
                </div>
            </div>
        </div>
        <h2>Кнопка "Назад"</h2>
        <div>
            <div class="demo__block">
                <Controls.Button.Back attr:class="test_element" style="default" size="l" caption="Назад"/>
                <Controls.Button.Back attr:class="test_element" style="primary" size="l" caption="Назад"/>
            </div>
            <div class="demo__block">
                <Controls.Button.Back attr:class="test_element" style="default" size="m" caption="Назад"/>
                <Controls.Button.Back attr:class="test_element" style="primary" size="m" caption="Назад"/>
            </div>
            <div class="demo__block">
                <Controls.Button.Back attr:class="test_element" style="default" size="s" caption="Назад"/>
                <Controls.Button.Back attr:class="test_element" style="primary" size="s" caption="Назад"/>
            </div>
        </div>
    </div>
</Controls.Application>