<ws:Controls.Layout.Filter attr:class="controls-demo__FilterLayout">
    <ws:content>
        <div>
            <ws:Controls.Layout.Search
                    attr:class="controls-demo__SearchLayout"
                    searchParam="title">
                <ws:content>
                    <div class="controls-demo__SearchLayout_content">
                        <div class="controls-demo__Layouts_content">
                            <div class="controls-demo__Layouts_filterComponents">
                                <ws:Controls.Input.Search bind:value="_searchValue"/>
                                <Controls.Filter.FastData source="{{_filterSource}}"
                                                          bind:selectedKeys="_selectedKeys"/>
                            </div>
                            <div class="controls-demo__LayoutInner">
                                <ws:Controls.Layout.List source="{{_dataSource}}" searchParam="title">
                                    <ws:content>
                                        <div>
                                            <ws:Controls.List idProperty="id" name="list">
                                                <ws:itemTemplate>
                                                    <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                                                                itemData="{{itemTemplate.itemData}}"
                                                    >
                                                        <ws:contentTemplate>
                                                            <div style="padding: 4px; display: flex; justify-content: space-between">
                                                                <div style="width: 200px">{{itemTemplate.itemData.item.get('title')}}</div>
                                                                <div style="font-size: 11px; color: grey">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                                                <div style="font-size: 11px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                                            </div>
                                                        </ws:contentTemplate>
                                                    </ws:partial>
                                                    <ws:emptyTemplate>
                                                        Не найдено
                                                    </ws:emptyTemplate>
                                                </ws:itemTemplate>

                                            </ws:Controls.List>
                                        </div>
                                    </ws:content>
                                    <ws:navigation source="page" view="page">
                                        <ws:sourceConfig pageSize="{{20}}" page="{{0}}" mode="totalCount"/>
                                    </ws:navigation>
                                </ws:Controls.Layout.List>
                            </div>
                        </div>
                    </div>
                </ws:content>
            </ws:Controls.Layout.Search>
        </div>
    </ws:content>
</ws:Controls.Layout.Filter>
