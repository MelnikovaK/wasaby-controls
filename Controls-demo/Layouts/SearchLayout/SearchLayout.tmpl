<Controls.Layout.Filter attr:class="controls-demo__FilterLayout" filterButtonSource="{{_filterSource}}" historyId="123" fastFilterSource="{{_filterSource}}">
    <ws:content>
        <div>
            <Controls.Layout.Search
                    attr:class="controls-demo__SearchLayout"
                    searchParam="title">
                <ws:content>
                    <div class="controls-demo__SearchLayout_content">
                        <div class="controls-demo__Layouts_content">
                            <div class="controls-demo__Layouts_filterComponents">
                                <Controls.Input.Search bind:value="_searchValue"/>
                                <div style="display: flex">
                                    <Controls.Filter.FastFilter bind:value="_value" source="{{_filterSource}}"/>

                                    <Controls.Filter.Button attr:style="max-width: 200px;" filterTemplate="js!Controls-demo/Layouts/SearchLayout/resources/FBPanelLayout">
                                        <ws:items>
                                            <ws:Array>
                                                <ws:Object id="id" caption="genreTxt"/>
                                                <ws:Object id="lastName"/>
                                                <ws:Object id="firstName"/>
                                            </ws:Array>
                                        </ws:items>
                                    </Controls.Filter.Button>
                                </div>
                            </div>
                            <div class="controls-demo__LayoutInner">
                                <Controls.Layout.List source="{{_dataSource}}" searchParam="title">
                                    <ws:content>
                                        <div>
                                            <Controls.List idProperty="id" name="list">
                                                <ws:itemTemplate>
                                                    <ws:partial template="tmpl!Controls/List/SimpleList/ItemTemplate"
                                                                itemData="{{itemTemplate.itemData}}"
                                                    >
                                                        <ws:contentTemplate>
                                                            <div style="padding: 4px; display: flex; justify-content: space-between">
                                                                <div style="width: 200px">{{itemTemplate.itemData.item.get('firstName')}}</div>
                                                                <div style="font-size: 13px; color: darkblue">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                                                <div style="font-size: 13px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                                            </div>
                                                        </ws:contentTemplate>
                                                    </ws:partial>
                                                </ws:itemTemplate>
                                            </Controls.List>
                                        </div>
                                    </ws:content>
                                    <ws:emptyTemplate>
                                        Не найдено
                                    </ws:emptyTemplate>
                                    <ws:navigation source="page" view="page">
                                        <ws:sourceConfig pageSize="{{20}}" page="{{0}}" mode="totalCount"/>
                                    </ws:navigation>
                                </Controls.Layout.List>
                            </div>
                        </div>
                    </div>
                </ws:content>
            </Controls.Layout.Search>
        </div>
    </ws:content>
</Controls.Layout.Filter>
