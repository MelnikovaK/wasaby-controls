<Controls.Container.Filter attr:class="controls-demo__FilterLayout" filterButtonSource="{{_filterSource}}" historyId="123" fastFilterSource="{{_fastFilterData}}">
    <ws:content>
        <div>
            <Controls.Container.Search
                    attr:class="controls-demo__SearchLayout"
                    searchParam="firstName">
                <ws:content>
                    <div class="controls-demo__SearchLayout_content">
                        <div class="controls-demo__Layouts_content">
                            <div class="controls-demo__Layouts_filterComponents">
                                <Controls.Container.Input.Search>
                                    <ws:content>
                                        <Controls.Input.Search bind:value="_searchValue"/>
                                    </ws:content>
                                </Controls.Container.Input.Search>
                                <Controls.Container.Filter.Fast>
                                   <Controls.Filter.Fast bind:value="_value"/>
                                </Controls.Container.Filter.Fast>
                                <Controls.Container.Filter.Button>
                                        <Controls.Filter.Button>
                                           <ws:itemTemplate templateName="tmpl!Controls-demo/Layouts/SearchLayout/FilterButtonTemplate/filterItemsTemplate"/>
                                           <ws:additionalTemplate templateName="tmpl!Controls-demo/Layouts/SearchLayout/FilterButtonTemplate/additionalItemsTemplate"/>
                                           <ws:items>
                                              <ws:Array>
                                                 <ws:Object id="FIO" value="Name" resetValue="" visibility="{{false}}">

                                                 </ws:Object>
                                                 <ws:Object id="firstName" value="123" resetValue="" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="id" value="{{3}}" resetValue="{{4}}"
                                                            source="{{sourceDropdown}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="checked" value="{{true}}" resetValue="{{false}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test1" value="{{3}}" resetValue="{{2}}" source="{{sourceDropdown}}"
                                                            visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test2" value="" resetValue="{{true}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test3" value="" resetValue="{{true}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test4" value="" resetValue="{{true}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test5" value="" resetValue="{{true}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test6" value="123" resetValue="" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test7" value="{{_value}}" resetValue="{{1}}" visibility="{{false}}">
                                                 </ws:Object>
                                                 <ws:Object id="Test8" value="{{false}}" resetValue="{{true}}" visibility="{{true}}">
                                                 </ws:Object>
                                              </ws:Array>
                                           </ws:items>
                                        </Controls.Filter.Button>
                                </Controls.Container.Filter.Button>
                            </div>
                            <div class="controls-demo__LayoutInner">
                                <Controls.Container.List searchParam="firstName" source="{{_dataSource}}">
                                    <ws:content>
                                        <div>
                                            <Controls.List keyProperty="id" name="list" >
                                                <ws:itemTemplate>
                                                    <ws:partial template="tmpl!Controls/List/ItemTemplate"
                                                                itemData="{{itemTemplate.itemData}}"
                                                    >
                                                        <ws:contentTemplate>
                                                            <div style="padding: 4px; display: flex; justify-content: space-between">
                                                                <div style="width: 200px">{{itemTemplate.itemData.item.get('firstName')}}</div>
                                                                <div style="font-size: 13px; color: darkblue">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                                                <div style="font-size: 13px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                                            </div>
                                                        </ws:contentTemplate>
                                                    </ws:partial>
                                                </ws:itemTemplate>
                                                <ws:emptyTemplate>
                                                    Не найдено
                                                </ws:emptyTemplate>
                                            </Controls.List>
                                        </div>
                                    </ws:content>
                                    <ws:navigation source="page" view="page">
                                        <ws:sourceConfig pageSize="{{20}}" page="{{0}}" mode="totalCount"/>
                                    </ws:navigation>
                                </Controls.Container.List>
                            </div>
                        </div>
                    </div>
                </ws:content>
            </Controls.Container.Search>
        </div>
    </ws:content>
</Controls.Container.Filter>
