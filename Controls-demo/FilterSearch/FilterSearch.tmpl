<div class="controls-demo__filterSearch-container">
    <Controls.Filter.Controller bind:filter="_filter" fastFilterSource="{{_fastFilterData}}" filterButtonSource="{{_filterButtonData}}">
        <Controls.Container.Data source="{{_source}}" navigation="{{_navigation}}" keyProperty="id">
            <Controls.Search.Controller searchParam="firstName">
                <div>
                    <div class="controls-demo__filterSearch-topWrapper">
                        <Controls.Search.Input.Container>
                            <Controls.Input.Search bind:value="_searchValue" attr:class="controls-demo__filterSearch-search"/>
                        </Controls.Search.Input.Container>

                        <div class="controls-demo__filterSearch-filters">
                            <Controls.Filter.Fast.Container>
                                <Controls.Filter.Fast attr:class="controls-demo__filterSearch-fastFilter"/>
                            </Controls.Filter.Fast.Container>

                            <Controls.Filter.Button.Container>
                                <Controls.Filter.Button attr:class="controls-demo__filterButton" templateName="Controls-demo/FilterSearch/Panel"/>
                            </Controls.Filter.Button.Container>
                        </div>
                    </div>
                    <Controls.List.Container>
                        <Controls.List emptyTemplate="Не найдено">
                            <ws:itemTemplate>
                                <ws:partial template="tmpl!Controls/List/ItemTemplate">
                                    <ws:contentTemplate>
                                        <div style="padding: 4px; display: flex; justify-content: space-between">
                                            <div style="width: 200px">{{itemTemplate.itemData.item.get('firstName')}}</div>
                                            <div style="font-size: 13px; color: darkblue">{{itemTemplate.itemData.item.get('lastName')}}</div>
                                            <div style="font-size: 13px; color: limegreen">{{itemTemplate.itemData.item.get('id')}}</div>
                                        </div>
                                    </ws:contentTemplate>
                                </ws:partial>
                            </ws:itemTemplate>
                        </Controls.List>
                    </Controls.List.Container>
                </div>
            </Controls.Search.Controller>
        </Controls.Container.Data>
    </Controls.Filter.Controller>
</div>