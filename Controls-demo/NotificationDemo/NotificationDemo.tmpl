<div>
   <ws:for data="index in 10">
      <div>
         <Controls.Button caption="Кликни чтобы открыть {{index}} опенер" on:click="_openNotification(index)"/>
         <Controls.Button caption="Кликни чтобы закрыть {{index}} опенер" on:click="_closeNotification(index)"/>
         <span>autoClose={{index > 5}}</span>
      </div>
      <Controls.Popup.Opener.Notification name="myOpener{{index}}">
         <ws:popupOptions template="tmpl!Controls/Popup/Templates/Notification/Simple">
            <ws:templateOptions style="done" text="Hello world from the {{index}} opener!!!"
                                icon="Admin" autoClose="{{index > 5}}"></ws:templateOptions>
         </ws:popupOptions>
      </Controls.Popup.Opener.Notification>
   </ws:for>
</div>
