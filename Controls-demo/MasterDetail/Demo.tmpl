<div>
   <h1>Двухколоночный браузер</h1>
   <Controls.Container.MasterDetail attr:class="controls-demo_MasterDetail">
      <ws:master>
         <Controls.Container.Scroll attr:class="controls-demo_MasterDetail_master">
               <Controls.Container.MasterList selectedField="sourceType">
                  <Controls.Grid
                          source="{{_masterSource}}"
                          keyProperty="id"
                          parentProperty="Раздел"
                          style="master"
                          nodeProperty="Раздел@"
                          columns="{{gridColumns}}"
                  >
                  </Controls.Grid>
               </Controls.Container.MasterList>
         </Controls.Container.Scroll>
      </ws:master>
      <ws:detail>
         <Controls.Container.Scroll attr:class="controls-demo_MasterDetail_detail">
            <Controls.List
                    keyProperty="id"
                    source="{{_detail[detail.selectedMasterValue]}}"
            >
               <ws:itemTemplate>
                  <ws:partial template="tmpl!Controls/List/ItemTemplate">
                     <ws:contentTemplate>
                        <ws:partial
                                item="{{itemTemplate.itemData.item}}"
                                template="tmpl!Controls-demo/MasterDetail/itemTemplates/TaskItemTemplate"
                        />
                     </ws:contentTemplate>
                  </ws:partial>
               </ws:itemTemplate>
            </Controls.List>
         </Controls.Container.Scroll>
      </ws:detail>
   </Controls.Container.MasterDetail>

   <br/>
   <br/>

   <Controls.Container.MasterDetail attr:class="controls-demo_MasterDetail">
      <ws:master>
         <Controls.Container.Scroll attr:class="controls-demo_MasterDetail_master">
            <Controls.Container.MasterList selectedField="sourceType">
               <Controls.List
                       style="master"
                       keyProperty="id"
                       source="{{_masterSource}}"
               >
                  <ws:itemTemplate>
                     <ws:partial template="tmpl!Controls/List/ItemTemplate">
                        <ws:contentTemplate>
                           <div>{{itemTemplate.itemData.item.name}}</div>
                        </ws:contentTemplate>
                     </ws:partial>
                  </ws:itemTemplate>
               </Controls.List>
            </Controls.Container.MasterList>
         </Controls.Container.Scroll>
      </ws:master>
      <ws:detail>
         <Controls.Container.Scroll attr:class="controls-demo_MasterDetail_detail">
            <Controls.List
                    keyProperty="id"
                    source="{{_detail[detail.selectedMasterValue]}}"
            >
               <ws:itemTemplate>
                  <ws:partial template="tmpl!Controls/List/ItemTemplate">
                     <ws:contentTemplate>
                        <ws:partial
                                item="{{itemTemplate.itemData.item}}"
                                template="tmpl!Controls-demo/MasterDetail/itemTemplates/TaskItemTemplate"
                        />
                     </ws:contentTemplate>
                  </ws:partial>
               </ws:itemTemplate>
            </Controls.List>
         </Controls.Container.Scroll>
      </ws:detail>
   </Controls.Container.MasterDetail>
</div>
