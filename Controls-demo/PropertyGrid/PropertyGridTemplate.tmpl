<ws:template name="string">
    <Controls-demo.PropertyGrid.StringTemplate
            bind:value="item.value"
            readOnly="{{item.readOnly}}"
            caption="{{item.id}}"
            source="{{item.source}}"
            template="{{item.template}}"
            firstLine="{{item.firstLine}}"
            secondLine="{{item.secondLine}}">
    </Controls-demo.PropertyGrid.StringTemplate>
</ws:template>

<ws:template name="number">
    <Controls-demo.PropertyGrid.NumberTemplate
            bind:value="item.value"
            readOnly="{{item.readOnly}}"
            caption="{{item.id}}">
    </Controls-demo.PropertyGrid.NumberTemplate>
</ws:template>

<ws:template name="boolean">
    <Controls.Toggle.Checkbox caption="{{item.id}}"  bind:value="item.value" />
</ws:template>

<ws:template name="enum">
    <Controls.Label caption="{{item.id}}" attr:class="demo-TextBox"/>
    <Controls.Input.ComboBox
            source="{{item.source}}"
            keyProperty="key"
            emptyText="{{item.emptyText}}"
            on:valueChanged="_valueChanged(item.nullValue)"
            on:selectedKeyChanged="_selectedKeyChanged()"
            displayProperty="title"
            bind:value="item.value"
            attr:class="demo-TextBox"/>
</ws:template>

<ws:template name="funct">
    <Controls-demo.PropertyGrid.StringOrFunctionTemplate
            bind:value="item.value"
            flag="{{item.flag}}"
            readOnly="{{item.readOnly}}"
            caption="{{item.id}}">
    </Controls-demo.PropertyGrid.StringOrFunctionTemplate>
</ws:template>


<ws:partial template="{{item.type}}" item="{{item}}"/>