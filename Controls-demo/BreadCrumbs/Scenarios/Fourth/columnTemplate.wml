<ws:partial template="wml!Controls/List/Grid/Column"
            attr:class="controls-Grid__row-cell__content_baseline_L"
            itemData="{{itemData}}">
   <ws:contentTemplate>
      <Controls.Decorator.Money number="{{itemData.item[itemData.column.displayProperty]}}"
                                style="{{itemData.column.displayProperty !== 'sum' ? 'noBasicRegistry' : ''}}"
                                delimiters="{{true}}"/>
      <span if="{{!itemData.dispItem.isNode() && itemData.columnIndex === 1}}">шт</span>
   </ws:contentTemplate>
</ws:partial>