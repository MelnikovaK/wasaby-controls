<div attr:class="demo-Checkbox__wrapper">
    <div attr:class="demo-CheckBox__exampleBlock">
        <h3>Example</h3>
        <Controls.Toggle.Checkbox on:valueChanged="changeValue()"
                                  attr:class="demo-Checkbox_width"
                                  value="{{_value}}"
                                  readOnly="{{_readOnly}}"
                                  caption="{{_caption}}"
                                  triState="{{_triState}}"
                                  tooltip="{{_tooltip}}"/>
    </div>
    <div attr:class="demo-CheckBox__optionsBlock">
        <h3>Options header</h3>
        <Controls.Label caption="caption"/>
        <Controls.Input.Text bind:value="_caption"/>
        <Controls.Label caption="tooltip"/>
        <Controls.Input.Text bind:value="_tooltip"/>
        <br/>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_readOnly" caption="readOnly" attr:test_name="readonly"/>
        <br/>
        <Controls.Toggle.Checkbox readOnly="{{false}}" bind:value="_triState" caption="triState" attr:test_name="state"/>
    </div>
    <div class="eventBlock">
        <span>Event that surfaced:</span>
        <br/>
        <span>{{_eventName}}</span>
    </div>
</div>